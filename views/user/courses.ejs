<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Courses - GCA</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    :root {
      --gov-dark: #0b1c2d;
      --gov-accent: #f59e0b;
      --gov-bg: #f8fafc;
      --gov-white: #ffffff;
      --gov-text: #1e293b;
      --gov-muted: #475569;
      --gov-border: #e5e7eb;
    }

    body {
      background: var(--gov-bg);
      font-family: system-ui, -apple-system, sans-serif;
      color: var(--gov-text);
    }

    .courses-hero {
      background: linear-gradient(rgba(11, 28, 45, 0.9), rgba(11, 28, 45, 0.8)),
        url("https://images.unsplash.com/photo-1524995997946-a1c2e315a42f") center/cover no-repeat;
      padding: 120px 0;
      text-align: center;
      color: white;
      margin-bottom: 60px;
    }

    .course-card {
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      transition: 0.3s;
      height: 100%;
      border: 1px solid var(--gov-border);
    }

    .course-card:hover {
      transform: translateY(-10px);
      border-color: var(--gov-accent);
    }

    .course-img-box {
      height: 200px;
      overflow: hidden;
      position: relative;
    }

    .course-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .course-badge {
      position: absolute;
      top: 15px;
      right: 15px;
      background: var(--gov-accent);
      padding: 5px 15px;
      border-radius: 50px;
      font-weight: 700;
    }

    .course-content {
      padding: 30px;
    }

    .course-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .course-short-desc {
      color: var(--gov-muted);
      margin-bottom: 20px;
    }

    .course-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-top: 1px solid var(--gov-border);
      padding-top: 15px;
    }

    .btn-details {
      background: var(--gov-dark);
      color: white;
      padding: 8px 20px;
      border-radius: 50px;
      text-decoration: none;
    }

    .filter-section {
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      margin-bottom: 50px;
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }

    .filter-btn {
      padding: 8px 25px;
      border-radius: 50px;
      border: 1px solid var(--gov-border);
      background: transparent;
      font-weight: 600;
      cursor: pointer;
    }

    .filter-btn.active,
    .filter-btn:hover {
      background: var(--gov-accent);
      border-color: var(--gov-accent);
    }
  </style>
</head>

<body>

  <%- include("navbar.ejs") %>

  <!-- HERO -->
  <div class="courses-hero">
    <div class="container">
      <h1>Excellence In Learning</h1>
      <p>Choose your path to a prestigious government career.</p>
    </div>
  </div>

  <div class="container">

    <!-- FILTER BUTTONS -->
    <div class="filter-section">
      <button class="filter-btn active" data-key="all">All Courses</button>
      <button class="filter-btn" data-key="upsc">UPSC</button>
      <button class="filter-btn" data-key="mpsc">MPSC</button>
      <button class="filter-btn" data-key="banking">Banking</button>
      <button class="filter-btn" data-key="police">Police Bharti</button>
      <button class="filter-btn" data-key="other">Other</button>
    </div>

    <!-- COURSES -->
    <div class="row g-4 mb-5">
      <% courses.forEach(course => { %>
        <div class="col-lg-4 col-md-6 course-item" data-key="<%= course.course_key.toLowerCase().trim() %>"
>
          <div class="course-card">
            <div class="course-img-box">
              <img src="/images/<%= course.image %>" class="course-img">
              <span class="course-badge">Live Batch</span>
            </div>
            <!-- <small>/images/<%= course.image %></small> -->

            <div class="course-content">
              <h3 class="course-title"><%= course.title %></h3>
              <p class="course-short-desc"><%= course.shortDesc %></p>
              <div class="course-meta">
                <div>
                  <i class="fas fa-clock"></i>
                  <%= course.duration %>
                </div>
                <a href="/course-details/<%= course.id %>" class="btn-details">View Details</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include("footer.ejs") %>

  <!-- JS -->
  <script>
document.addEventListener("DOMContentLoaded", function () {

  const filterButtons = document.querySelectorAll(".filter-btn");
  const courseItems = document.querySelectorAll(".course-item");

  filterButtons.forEach(btn => {
    btn.addEventListener("click", function () {

      filterButtons.forEach(b => b.classList.remove("active"));
      this.classList.add("active");

      const key = this.dataset.key;

      courseItems.forEach(item => {
        if (key === "all" || item.dataset.key === key) {
          item.style.display = "";    
        } else {
          item.style.display = "none";
        }
      });

    });
  });

});
</script>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
