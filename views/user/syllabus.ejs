    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --gov-bg: #f8fafc;
            --gov-white: #ffffff;
            --gov-text: #1e293b;
            --gov-muted: #475569;
            --gov-border: #e5e7eb;
        }

        /* Page Header */
        .page-header {
            background: linear-gradient(135deg, var(--gov-dark) 0%, #1a365d 100%);
            color: var(--gov-white);
            padding: 80px 0 60px;
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23f59e0b' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.5;
        }

        .page-header h1 {
            font-size: 3.2rem;
            font-weight: 700;
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }

        .page-header h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 80px;
            height: 4px;
            background-color: var(--gov-accent);
            border-radius: 2px;
        }

        .page-header p {
            font-size: 1.2rem;
            max-width: 700px;
            margin: 20px auto 0;
            opacity: 0.9;
        }

        /* Syllabus Cards */
        .syllabus-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(11, 28, 45, 0.08);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
            height: 100%;
            background-color: var(--gov-white);
            position: relative;
            border-top: 4px solid var(--gov-dark);
        }

        .syllabus-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 30px rgba(11, 28, 45, 0.15);
        }

        /* Card entrance animation */
        @keyframes cardEntrance {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.95);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .animated-card {
            animation: cardEntrance 0.6s ease-out forwards;
            opacity: 0;
        }

        /* Stagger the card animations */
        .card-1 {
            animation-delay: 0.1s;
        }

        .card-2 {
            animation-delay: 0.2s;
        }

        .card-3 {
            animation-delay: 0.3s;
        }

        .card-4 {
            animation-delay: 0.4s;
        }

        .card-5 {
            animation-delay: 0.5s;
        }

        .card-6 {
            animation-delay: 0.6s;
        }

        /* Updated badge */
        .updated-badge {
            position: absolute;
            top: 15px;
            right: -30px;
            background-color: var(--gov-accent);
            color: var(--gov-dark);
            padding: 5px 35px;
            font-size: 0.8rem;
            font-weight: 700;
            transform: rotate(45deg);
            z-index: 1;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Card header */
        .card-header {
            background-color: var(--gov-dark);
            color: var(--gov-white);
            padding: 25px 15px;
            border-bottom: none;
            position: relative;
        }

        .card-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background-color: var(--gov-accent);
            border-radius: 1.5px;
        }

        .exam-icon {
            font-size: 2.8rem;
            margin-bottom: 15px;
            color: var(--gov-accent);
            display: inline-block;
            transition: transform 0.5s ease;
        }

        .syllabus-card:hover .exam-icon {
            transform: scale(1.2) rotate(5deg);
        }

        .card-header h3 {
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
        }

        /* Card body */
        .card-body {
            padding: 25px;
            background-color: var(--gov-white);
        }

        .card-body p {
            color: var(--gov-muted);
            line-height: 1.6;
            margin-bottom: 25px;
            height: 75px;
            overflow: hidden;
        }

        /* Button */
        .btn-download {
            background-color: var(--gov-dark);
            color: var(--gov-white);
            border: none;
            padding: 10px 25px;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .btn-download:hover {
            background-color: var(--gov-accent);
            color: var(--gov-dark);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(245, 158, 11, 0.3);
        }

        .btn-download i {
            margin-right: 8px;
        }

        /* Info Alert */
        .alert-info {
            background-color: var(--gov-white);
            border: 1px solid var(--gov-border);
            border-left: 5px solid var(--gov-accent) !important;
            color: var(--gov-text);
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(11, 28, 45, 0.05);
        }

        .alert-heading {
            color: var(--gov-dark);
            font-weight: 700;
        }

        .alert-heading i {
            color: var(--gov-accent);
        }

        hr {
            background-color: var(--gov-border);
            opacity: 1;
        }

        /* Container adjustments */
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .page-header {
                padding: 60px 0 40px;
            }

            .page-header h1 {
                font-size: 2.5rem;
            }

            .card-body p {
                height: auto;
            }
        }

        /* Floating animation for page header */
        @keyframes floating {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .page-header .container {
            animation: floating 6s ease-in-out infinite;
        }

        /* Pulse animation for updated badge */
        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.7);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(245, 158, 11, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(245, 158, 11, 0);
            }
        }

        .updated-badge {
            animation: pulse 2s infinite;
        }
    </style>
</head>

