        <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
        <script>
            AOS.init();

            // Gallery items data
            const galleryItems = [];
            let currentIndex = 0;

            // Initialize gallery items from DOM
            $(document).ready(function () {
                // Collect all gallery items
                $('.gallery-card').each(function (index) {
                    const item = {
                        index: index,
                        src: $(this).data('src'),
                        type: $(this).data('type'),
                        alt: $(this).find('img').attr('alt') || $(this).find('iframe').attr('title') || 'Gallery Item'
                    };
                    galleryItems.push(item);
                });

                // Update total items counter
                $('#totalItems').text(galleryItems.length);

                // Open lightbox when clicking on gallery item
                $('.gallery-card').click(function () {
                    const index = $(this).data('index');
                    openLightbox(index);
                });

                // Close lightbox
                $('.lightbox-close').click(function () {
                    closeLightbox();
                });

                // Close on ESC key
                $(document).keydown(function (e) {
                    if (e.keyCode === 27) { // ESC key
                        closeLightbox();
                    } else if (e.keyCode === 37) { // Left arrow
                        navigate(-1);
                    } else if (e.keyCode === 39) { // Right arrow
                        navigate(1);
                    }
                });

                // Navigation buttons
                $('#prevBtn').click(function () {
                    navigate(-1);
                });

                $('#nextBtn').click(function () {
                    navigate(1);
                });

                // Close when clicking outside content
                $('#lightboxModal').click(function (e) {
                    if (e.target === this) {
                        closeLightbox();
                    }
                });
            });

            function openLightbox(index) {
                currentIndex = index;
                updateLightbox();
                $('#lightboxModal').fadeIn(300);
                $('body').css('overflow', 'hidden'); // Prevent scrolling
            }

            function closeLightbox() {
                $('#lightboxModal').fadeOut(300);
                $('body').css('overflow', 'auto'); // Restore scrolling
                // Stop video playback when closing
                $('#lightboxContainer iframe').attr('src', $('#lightboxContainer iframe').attr('src'));
            }

            function navigate(direction) {
                currentIndex += direction;

                // Loop around
                if (currentIndex < 0) {
                    currentIndex = galleryItems.length - 1;
                } else if (currentIndex >= galleryItems.length) {
                    currentIndex = 0;
                }

                updateLightbox();
            }

            function updateLightbox() {
                const item = galleryItems[currentIndex];

                // Update counter
                $('#currentIndex').text(currentIndex + 1);

                // Clear container
                $('#lightboxContainer').empty();
                $('#lightboxCaption').text(item.alt);

                if (item.type === 'image') {
                    // Display image
                    const img = $('<img>', {
                        class: 'lightbox-content',
                        src: item.src,
                        alt: item.alt
                    });
                    $('#lightboxContainer').append(img);
                } else if (item.type === 'video') {
                    // Display video
                    const iframe = $('<iframe>', {
                        class: 'lightbox-video',
                        src: item.src,
                        frameborder: '0',
                        allow: 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share',
                        allowfullscreen: 'allowfullscreen'
                    });
                    $('#lightboxContainer').append(iframe);
                }
            }

            // Auto slide (optional - uncomment if you want auto slide)

            let autoSlideInterval;

            function startAutoSlide() {
                autoSlideInterval = setInterval(() => {
                    navigate(1);
                }, 5000); // Change slide every 5 seconds
            }

            function stopAutoSlide() {
                clearInterval(autoSlideInterval);
            }

            // Start auto slide when lightbox opens
            $('#lightboxModal').on('show', function () {
                startAutoSlide();
            });

            // Stop auto slide when lightbox closes
            $('#lightboxModal').on('hide', function () {
                stopAutoSlide();
            });

        </script>

