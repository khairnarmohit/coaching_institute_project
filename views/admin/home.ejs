<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">
        <%= editBatch ? 'Edit Upcoming Batch' : 'Add Upcoming Batch' %>
    

    <button type="button"
            class="btn btn-outline-primary btn-sm"
            onclick="toggleBatchSection()">
        Edit ðŸ‘‡
    </button>
    </h3>
</div>

<div id="batchSection" style="display:none;">

    <form method="POST" action="/admin/batches/save">

        <!-- Hidden ID -->
        <input type="hidden" name="id" value="<%= editBatch ? editBatch.id : '' %>">

        <div class="mb-3">
            <label class="form-label">Batch Title</label>
            <input type="text"
                   name="title"
                   class="form-control"
                   placeholder="e.g. Foundation Batch 2025"
                   value="<%= editBatch ? editBatch.title : '' %>"
                   required>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text"
                   name="description"
                   class="form-control"
                   placeholder="e.g. For UPSC / MPSC / SSC Aspirants"
                   value="<%= editBatch ? editBatch.description : '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Duration</label>
            <input type="text"
                   name="duration"
                   class="form-control"
                   placeholder="e.g. 12 Months"
                   value="<%= editBatch ? editBatch.duration : '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Fees</label>
            <input type="text"
                   name="fees"
                   class="form-control"
                   placeholder="e.g. â‚¹45,000"
                   value="<%= editBatch ? editBatch.fees : '' %>">
        </div>

        <button class="btn btn-success">
            <%= editBatch ? 'Update Batch' : 'Add Batch' %>
        </button>

        <% if (editBatch) { %>
            <a href="/admin/home" class="btn btn-secondary ms-2">Cancel</a>
        <% } %>
    </form>

    <hr>

    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Duration</th>
            <th>Fees</th>
            <th>Status</th>
            <th>Action</th>
        </tr>

        <% batches.forEach(b => { %>
            <tr>
                <td><%= b.title %></td>
                <td><%= b.description %></td>
                <td><%= b.duration %></td>
                <td><%= b.fees %></td>

                <td>
                    <% if (b.status == 1) { %>
                        <span class="badge bg-success">Active</span>
                    <% } else { %>
                        <span class="badge bg-secondary">Hidden</span>
                    <% } %>
                </td>

                <td>
                    <a href="/admin/batches/edit/<%= b.id %>"
                       class="btn btn-warning btn-sm">Edit</a>

                    <a href="/admin/batches/delete/<%= b.id %>"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure?')">
                       Delete
                    </a>
                </td>
            </tr>
        <% }) %>
    </table>

</div>
<script>
    function toggleBatchSection() {
        const box = document.getElementById("batchSection");
        box.style.display = (box.style.display === "none") ? "block" : "none";
    }
</script>


