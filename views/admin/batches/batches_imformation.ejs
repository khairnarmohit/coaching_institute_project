<%- include("./../navbar.ejs") %>

<style>
.page-header p {
    font-size: 1.1rem;
    opacity: 0.9;
    max-width: 700px;
    margin: 0 auto;
}

.section-title {
    color: var(--gov-dark);
    font-size: 1.8rem;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid var(--gov-accent);
    display: inline-block;
}

.info-boxes {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
}

.info-box {
    background: var(--gov-white);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgba(0,0,0,.1);
    border-left: 4px solid var(--gov-accent);
}
:root {
  --gov-dark: #0b1c2d;
  --gov-accent: #f59e0b;
  --gov-bg: #f8fafc;
  --gov-border: #e5e7eb;
  --gov-shadow: 0 12px 32px -6px rgba(0,0,0,0.08);
  --gov-radius: 18px;
}

/* ===== GLOBAL ===== */
body {
  background-color: var(--gov-bg);
  color: #1f2937;
}

/* ===== SECTION TITLE ===== */
.section-title {
  color: var(--gov-dark);
  border-bottom: 3px solid var(--gov-accent);
}

/* ===== TABLE ===== */
.table {
  background: #ffffff;
  border-radius: var(--gov-radius);
  overflow: hidden;
  box-shadow: var(--gov-shadow);
}

.table thead {
  background: var(--gov-dark);
  color: #ffffff;
}

.table th,
.table td {
  vertical-align: middle;
  border-color: var(--gov-border);
}

#da {
  text-align: center;
  font-size: 24px;
  color: var(--gov-accent);
}

/* ===== BUTTONS ===== */
.btn-primary {
  background-color: var(--gov-dark);
  border-color: var(--gov-dark);
}

.btn-primary:hover {
  background-color: #081523;
  border-color: #081523;
}

.btn-success {
  background-color: var(--gov-accent);
  border-color: var(--gov-accent);
  color: #000;
}

.btn-success:hover {
  background-color: #d97706;
  border-color: #d97706;
  color: #000;
}

.btn-danger {
  background-color: #dc2626;
  border-color: #dc2626;
}

/* ===== MODAL ===== */
.modal-content {
  border-radius: var(--gov-radius);
  box-shadow: var(--gov-shadow);
  border: none;
}

.modal-header {
  background: var(--gov-dark);
  color: #ffffff;
}

.modal-header .btn-close {
  filter: invert(1);
}

/* ===== FORM ===== */
.form-control {
  border-radius: 10px;
  border: 1px solid var(--gov-border);
}

.form-control:focus {
  border-color: var(--gov-accent);
  box-shadow: 0 0 0 0.2rem rgba(245, 158, 11, 0.25);
}



</style>

<!-- ================= MODAL ================= -->

<div class="modal fade" id="addinfoboxmodal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Add New Info Box</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <form action="/admin/add_info_box" method="post" id="add_info_box">
        <div class="modal-body">

          <input type="hidden" name="info_box_id" id="info_box_id">

          <div class="mb-3">
            <label class="form-label">Info Box Title</label>
            <input type="text" name="title" id="title" class="form-control" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Info Box Description</label>
            <textarea name="description" id="description" class="form-control" rows="4" required></textarea>
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Save</button>
        </div>
      </form>

    </div>
  </div>
</div>

<!-- ================= TABLE ================= -->

<main class="container mt-4">
<section class="batches-section">
  <h2 class="section-title">Info Boxes</h2>

  <button class="btn btn-primary float-end mb-3"
    data-bs-toggle="modal"
    data-bs-target="#addinfoboxmodal"
    id="addInfoBoxBtn">
    <i class="fa-solid fa-plus"></i> Add Info Box
  </button>

  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>Sr No</th>
        <th>Title</th>
        <th>Description</th>
        <th width="200">Action</th>
      </tr>
    </thead>

    <tbody>
    <% for(let i=0;i<result.length;i++){ %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= result[i].title %></td>
        <td><%= result[i].description %></td>
        <td>
          <a href="javascript:void(0)"
            class="btn btn-sm btn-primary editInfoBoxBtn"
            data-id="<%= result[i].id %>"
            data-title="<%= result[i].title %>"
            data-description="<%= result[i].description %>">
            <i class="fa-solid fa-pen-to-square"></i>
          </a>

          <a href="/admin/delete_info_box/<%= result[i].id %>"
            class="btn btn-sm btn-danger"
            onclick="return confirm('Are you sure?')">
            <i class="fa-solid fa-trash"></i>
          </a>
        </td>
      </tr>
    <% } %>
    </tbody>
  </table>
</section>
</main>

<!-- ================= SCRIPTS ================= -->

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
/* EDIT INFO BOX */
$(document).on("click", ".editInfoBoxBtn", function () {

  $("#info_box_id").val($(this).data("id"));
  $("#title").val($(this).data("title"));
  $("#description").val($(this).data("description"));

  $("#addinfoboxmodal .modal-title").text("Edit Info Box");
  $("#add_info_box").attr("action", "/admin/update_info_box");

  $("#addinfoboxmodal").modal("show");
});

/* ADD INFO BOX RESET */
$("#addInfoBoxBtn").on("click", function () {

  $("#add_info_box")[0].reset();
  $("#info_box_id").val("");

  $("#addinfoboxmodal .modal-title").text("Add New Info Box");
  $("#add_info_box").attr("action", "/admin/add_info_box");
});
</script>

