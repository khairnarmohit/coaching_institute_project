<%- include('navbar.ejs') %>

<div class="row mt-4">
    <!-- LEFT: Add / Edit Form -->
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <i class="fas fa-user-graduate me-2"></i>
                <%= edit ? 'Edit Topper' : 'Add New Topper' %>
            </div>
            <div class="card-body">
                <form action="<%= edit ? '/admin/toppers/update' : '/admin/toppers/save' %>" method="POST"
                    enctype="multipart/form-data">

                    <% if(edit) { %>
                        <input type="hidden" name="id" value="<%= edit.id %>">
                        <input type="hidden" name="old_image" value="<%= edit.image %>">
                    <% } %>

                    <div class="mb-3">
                        <label class="form-label">Student Name</label>
                        <input type="text" name="name" class="form-control"
                            value="<%= edit ? edit.name : '' %>" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Course Name</label>
                        <input type="text" name="course" class="form-control"
                            value="<%= edit ? edit.course : '' %>" required>
                        <small class="text-muted">e.g. MPSC State Services</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Rank / Achievement</label>
                            <input type="text" name="rank" class="form-control"
                                value="<%= edit ? edit.rank : '' %>" required>
                            <small class="text-muted">e.g. State Rank 15</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Score / Percentage</label>
                            <input type="text" name="percentage" class="form-control"
                                value="<%= edit ? edit.percentage : '' %>">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Batch Year</label>
                        <input type="text" name="batch_year" class="form-control"
                            value="<%= edit ? edit.batch_year : '' %>" placeholder="e.g. 2024">
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Student Image</label>
                        <input type="file" name="image" class="form-control" accept="image/*" <%= edit ? '' : 'required' %>>
                        <% if(edit && edit.image) { %>
                            <img src="/images/<%= edit.image %>" class="mt-2 rounded" width="80" height="80"
                                style="object-fit:cover;">
                        <% } %>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-warning fw-bold">
                            <%= edit ? 'Update Topper' : 'Save Topper' %>
                        </button>
                        <% if(edit) { %>
                            <a href="/admin/toppers" class="btn btn-secondary">Cancel</a>
                        <% } %>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- RIGHT: List -->
    <div class="col-md-7">
        <div class="card shadow">
            <div class="card-header bg-dark  text-white">
                <h5 class="mb-0">Toppers List</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0 rounded-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Student</th>
                            <th>Details</th>
                            <th>Rank</th>
                            <th class="text-end pe-4 text-center" style="width:120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(toppers.length > 0) { %>
                            <% toppers.forEach(t => { %>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <img src="/images/<%= t.image %>" class="rounded-circle me-2 border"
                                                width="40" height="40" style="object-fit:cover;">
                                            <span class="fw-bold"><%= t.name %></span>
                                        </div>
                                    </td>
                                    <td>
                                        <small class="d-block text-muted"><%= t.course %></small>
                                        <small class="text-success"><%= t.batch_year %></small>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark"><%= t.rank %></span>
                                        <div class="small text-muted"><%= t.percentage %></div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-inline-flex gap-1">
                                            <a href="/admin/toppers/edit/<%= t.id %>"
                                                class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/admin/toppers/delete/<%= t.id %>"
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">
                                    No toppers added yet.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>
