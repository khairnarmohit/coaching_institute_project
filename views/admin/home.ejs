<%- include('navbar.ejs')%>

<h3 class="d-flex justify-content-between align-items-center">
    Edit Home Banner

    <!-- DROPDOWN / TOGGLE BUTTON -->
    <button class="btn btn-primary"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#editBannerForm"
            aria-expanded="false"
            aria-controls="editBannerForm">
        Edit Banner
    </button>
</h3>

<!-- COLLAPSE START -->
<div class="collapse mt-3" id="editBannerForm">

<form action="/admin/home-update" method="POST">

    <input type="hidden" name="id" value="<%= banner.id %>">

    <div class="mb-3">
        <label>Badge Text</label>
        <input type="text" name="badge_text" class="form-control"
               value="<%= banner.badge_text %>">
    </div>

    <div class="mb-3">
        <label>Main Heading</label>
        <input type="text" name="heading_main" class="form-control"
               value="<%= banner.heading_main %>">
    </div>

    <div class="mb-3">
        <label>Highlight Heading</label>
        <input type="text" name="heading_highlight" class="form-control"
               value="<%= banner.heading_highlight %>">
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea name="description" class="form-control"><%= banner.description %></textarea>
    </div>

    <!-- IMAGE PATH -->
    <div class="col-md-6 mb-3 float-start">
        <label>Banner Image Path</label>
        <input type="file" name="banner_image" class="form-control"
               value="<%= banner.banner_image %>">
        <small>Example: images/home_banner.jpg</small>
        <input type="file" name="img" value="<%= banner.banner_image %>" hidden>
    </div>

    <div class="col-md-6 float-start">
        <label class="form-label ms-3">Preview Image</label>
        <div class=" ms-3 mb-4 p-0 card card-body h-25 w-25">
            <img src="../images/<%= banner.banner_image %>" class="img-fluid ">
        </div>
    </div>

    <div class="row">
        <div class="col">
            <input type="text" name="btn1_text" value="<%= banner.btn1_text %>" class="form-control">
        </div>
        <div class="col">
            <input type="text" name="btn1_link" value="<%= banner.btn1_link %>" class="form-control">
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <input type="number" name="years_exp" value="<%= banner.years_exp %>" class="form-control">
        </div>
        <div class="col">
            <input type="number" name="selections" value="<%= banner.selections %>" class="form-control">
        </div>
        <div class="col">
            <input type="number" name="satisfaction" value="<%= banner.satisfaction %>" class="form-control">
        </div>
    </div>

    <button class="btn btn-success mt-4">Update Banner</button>
</form>

</div>
<!-- COLLAPSE END -->



