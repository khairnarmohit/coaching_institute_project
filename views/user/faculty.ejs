    /* Faculty Page Specific Styles */
    /* ================= PAGE TITLE (FACULTY) ================= */
.page-title {
    background: linear-gradient(rgba(11, 28, 45, 0.9), rgba(11, 28, 45, 0.8)),
        url("https://images.unsplash.com/photo-1529070538774-1843cb3265df?auto=format&fit=crop&w=2000&q=80")

        center/cover no-repeat;
    padding: 120px 0 100px;
    text-align: center;
    color: #ffffff;
    position: relative;
    overflow: hidden;
    animation: heroZoom 1.6s ease-out forwards;
}

/* glow overlay */
.page-title::after {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top, rgba(245, 158, 11, 0.15), transparent 60%);
    animation: glowMove 6s ease-in-out infinite;
    pointer-events: none;
}

/* keep content above overlay */
.page-title .container {
    position: relative;
    z-index: 2;
}

/* heading animation */
.page-title h1 {
    font-size: 2.6rem;
    font-weight: 800;
    margin-bottom: 14px;
    background: linear-gradient(135deg, #ffffff 0%, #f59e0b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

    opacity: 0;
    animation: titleReveal 1s ease-out forwards;
    animation-delay: 0.4s;
}

/* paragraph animation */
.page-title p {
    font-size: 1.1rem;
    max-width: 820px;
    margin: 0 auto;

    color: #f1f5f9;
    background: rgba(255, 255, 255, 0.1);
    padding: 10px 22px;
    border-radius: 25px;
    backdrop-filter: blur(6px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);

    opacity: 0;
    animation: subtitleReveal 1s ease-out forwards;
    animation-delay: 0.9s;
}

/* reuse animations */
@keyframes heroZoom {
    from {
        opacity: 0;
        transform: scale(1.08);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes glowMove {
    0% { opacity: 0.4; }
    50% { opacity: 0.7; }
    100% { opacity: 0.4; }
}

@keyframes titleReveal {
    from {
        opacity: 0;
        transform: translateY(30px);
        filter: blur(6px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
    }
}

@keyframes subtitleReveal {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* mobile */
@media (max-width: 768px) {
    .page-title {
        padding: 32px 12px 28px;
    }

    .page-title h1 {
        font-size: 2rem;
    }

    .page-title p {
        font-size: 1rem;
    }
}


    .faculty-card {
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      border: 1px solid var(--gov-border);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      height: 100%;
      background: var(--gov-white);
    }

    .faculty-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      border-color: var(--gov-accent);
    }

    .faculty-img-container {
      position: relative;
      overflow: hidden;
      background-color: var(--gov-bg);
    }

    .faculty-img {
      height: 100%;
      width: 100%;
      object-fit: cover;
      object-position: top center;
      transition: transform 0.5s ease;
    }

    .faculty-card:hover .faculty-img {
      transform: scale(1.03);
    }

    .faculty-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, var(--gov-dark), transparent);
      padding: 20px;
      color: var(--gov-white);
      transform: translateY(100%);
      transition: transform 0.3s ease;
    }

    .faculty-card:hover .faculty-overlay {
      transform: translateY(0);
    }

    .faculty-social {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .faculty-social a {
      color: var(--gov-white);
      background: rgba(255, 255, 255, 0.2);
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
    }

    .faculty-social a:hover {
      background: var(--gov-accent);
      transform: translateY(-3px);
    }

    .designation {
      font-weight: 700;
      color: var(--gov-accent);
      font-size: 1.1rem;
      margin-bottom: 5px;
    }

    .section-title {
      font-weight: 800;
      margin-bottom: 40px;
      position: relative;
      display: inline-block;
      color: var(--gov-dark);
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(to right, var(--gov-dark), var(--gov-accent));
      border-radius: 2px;
    }

    .badge-subject {
      background-color: var(--gov-bg);
      color: var(--gov-text);
      margin: 3px;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
      display: inline-block;
      border: 1px solid var(--gov-border);
    }

    /* Founder Card Styling */
    .founder-card {
      border-left: 6px solid var(--gov-accent);
      background: linear-gradient(135deg, #fffbf0 0%, var(--gov-white) 100%);
    }

    .founder-card .designation {
      color: var(--gov-accent);
    }

    /* Academic Head Card Styling */
    .academic-card {
      border-left: 6px solid var(--gov-success);
      background: linear-gradient(135deg, #f0fff4 0%, var(--gov-white) 100%);
    }

    .academic-card .designation {
      color: var(--gov-success);
    }

    /* Special Card Styling */
    .special-card {
      border-left: 6px solid #ef4444;
      background: linear-gradient(135deg, #fff0f0 0%, var(--gov-white) 100%);
    }

    .special-card .designation {
      color: #ef4444;
    }

    /* Faculty Stats */
    .faculty-stats {
      display: flex;
      justify-content: space-between;
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid var(--gov-border);
    }

    .stat-item {
      text-align: center;
    }

    .stat-number {
      font-weight: 700;
      font-size: 1.4rem;
      color: var(--gov-dark);
    }

    .stat-label {
      font-size: 0.85rem;
      color: var(--gov-muted);
    }

    /* Faculty Achievements */
