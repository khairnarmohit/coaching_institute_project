    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        /* Define CSS Variables */
        :root {
            --gov-dark: #0b1c2d;
            --gov-accent: #f59e0b;
            --gov-bg: #f8fafc;
            --gov-white: #ffffff;
            --gov-text: #1e293b;
            --gov-muted: #475569;
            --gov-border: #e5e7eb;
        }

        /* Apply theme to body */
        body {
            background-color: var(--gov-bg);
            color: var(--gov-text);
        }

        /* Hero section with background image */
        .hero {
            height: 60vh;
            position: relative;
            overflow: hidden;
        }

        /* Background image layer */
        .hero::before {
            content: "";
            position: absolute;
            inset: 0;
            background: url("images/img3.jpg") center/cover no-repeat;
            filter: blur(4px);
            transform: scale(1.1);
            z-index: 1;
        }

        /* Dark overlay using gov-dark color */
        .hero::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(11, 28, 45, 0.85); /* Using var(--gov-dark) with transparency */
            z-index: 2;
        }

        /* Content stays above */
        .hero > * {
            position: relative;
            z-index: 3;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            animation: fadeInDown 1s ease-out;
        }

        /* Form styling with theme colors */
        .form-title {
            color: var(--gov-dark);
            position: relative;
            display: inline-block;
        }

        .form-title:after {
            content: '';
            position: absolute;
            width: 60px;
            height: 4px;
            background: var(--gov-accent);
            bottom: -10px;
            left: 0;
            border-radius: 2px;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background-color: var(--gov-white);
            border: 1px solid var(--gov-border);
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(11, 28, 45, 0.1) !important;
        }

        /* Contact info icons */
        .contact-info li {
            padding: 10px 0;
            border-bottom: 1px solid var(--gov-border);
            transition: all 0.3s ease;
        }

        .contact-info li:hover {
            background-color: var(--gov-bg);
            padding-left: 10px;
            border-radius: 5px;
        }

        /* Form input focus effects */
        .form-control {
            background-color: var(--gov-white);
            border: 1px solid var(--gov-border);
            color: var(--gov-text);
        }

        .form-control:focus {
            border-color: var(--gov-accent);
            box-shadow: 0 0 0 0.25rem rgba(245, 158, 11, 0.25);
        }

        .form-label {
            color: var(--gov-dark);
            font-weight: 500;
        }

        /* Submit button with gov-accent color */
        .btn-primary {
            background-color: var(--gov-accent);
            border-color: var(--gov-accent);
            padding: 10px 30px;
            border-radius: 30px;
            font-weight: 600;
            transition: all 0.3s ease;
            color: var(--gov-dark);
        }

        .btn-primary:hover {
            background-color: #e69007; /* Darker shade of gov-accent */
            border-color: #e69007;
            transform: scale(1.05);
        }

        /* Success button state */
        .btn-success {
            background-color: #10b981;
            border-color: #10b981;
        }

        /* Outline buttons */
        .btn-outline-primary {
            color: var(--gov-accent);
            border-color: var(--gov-accent);
        }

        .btn-outline-primary:hover {
            background-color: var(--gov-accent);
            border-color: var(--gov-accent);
            color: var(--gov-dark);
        }

        /* Map styling */
        .form-section {
            position: relative;
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(11, 28, 45, 0.1);
        }

        /* Animation classes */
        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .slide-in-left {
            opacity: 0;
            transform: translateX(-30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        .slide-in-left.visible {
            opacity: 1;
            transform: translateX(0);
        }

        .slide-in-right {
            opacity: 0;
            transform: translateX(30px);
            transition: opacity 0.8s ease, transform 0.8s ease;
        }

        .slide-in-right.visible {
            opacity: 1;
            transform: translateX(0);
        }

        /* Keyframe animations */
        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }

        /* Pulse animation for contact info icons */
        .pulse-icon {
            animation: pulse 2s infinite;
            color: var(--gov-accent);
        }

        /* Text colors */
        .text-muted {
            color: var(--gov-muted) !important;
        }

        .text-primary {
            color: var(--gov-accent) !important;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }
            
            .hero {
                height: 40vh;
            }
        }

        /* Section spacing */
        section {
            padding: 60px 0;
        }

        section:first-of-type {
            padding-top: 0;
        }

        /* Form check styling */
        .form-check-input:checked {
            background-color: var(--gov-accent);
            border-color: var(--gov-accent);
        }

        .form-check-label {
            color: var(--gov-muted);
        }

        /* Social media icons hover effect */
        .btn-outline-primary {
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover i {
            transform: scale(1.2);
            transition: transform 0.3s ease;
        }
    </style>
</head>
