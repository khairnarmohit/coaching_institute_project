<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery - GCA</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --gov-dark: #0b1c2d;
            --gov-accent: #f59e0b;
            --gov-bg: #f8fafc;
            --gov-white: #ffffff;
            --gov-text: #1e293b;
            --gov-muted: #475569;
            --gov-border: #e5e7eb;
            --gov-green: #16a34a;
        }

        body {
            background: var(--gov-bg);
            font-family: system-ui, -apple-system, sans-serif;
            overflow-x: hidden;
        }

        /* ================= GALLERY HERO ================= */
        .gallery-hero {
            background: linear-gradient(rgba(11, 28, 45, 0.9), rgba(11, 28, 45, 0.8)),
                url("https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=2000&q=80") center/cover no-repeat;
            padding: 35px 0 30px;
            /* üîΩ more reduced */
            text-align: center;
            color: #ffffff;
            position: relative;
            overflow: hidden;
            animation: heroZoom 1.8s ease-out forwards;
        }


        /* Background zoom */
        @keyframes heroZoom {
            from {
                opacity: 0;
                transform: scale(1.08);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Soft glowing overlay */
        .gallery-hero::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top, rgba(245, 158, 11, 0.15), transparent 60%);
            animation: glowMove 6s ease-in-out infinite;
            pointer-events: none;
        }

        @keyframes glowMove {
            0% {
                opacity: 0.4;
            }

            50% {
                opacity: 0.7;
            }

            100% {
                opacity: 0.4;
            }
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        /* Title animation */
        .hero-title {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 25px;
            background: linear-gradient(135deg, #ffffff 0%, #f59e0b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            opacity: 0;
            animation: titleReveal 1s ease-out forwards;
            animation-delay: 0.4s;
        }

        @keyframes titleReveal {
            from {
                opacity: 0;
                transform: translateY(30px);
                filter: blur(6px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
                filter: blur(0);
            }
        }

        /* Subtitle animation */
        .hero-subtitle {
            font-size: 1.3rem;
            max-width: 750px;
            margin: 0 auto;
            color: #f1f5f9;
            background: rgba(255, 255, 255, 0.1);
            padding: 15px 28px;
            border-radius: 50px;
            backdrop-filter: blur(6px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            opacity: 0;
            animation: subtitleReveal 1s ease-out forwards;
            animation-delay: 0.9s;
        }

        @keyframes subtitleReveal {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.4rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
                border-radius: 25px;
            }
        }


        .gallery-card {
            position: relative;
            overflow: hidden;
            border-radius: 20px;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            height: 280px;
            border: 4px solid var(--gov-white);
        }

        .gallery-card img,
        .gallery-card iframe {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s ease;
        }

        .gallery-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 20px 40px rgba(11, 28, 45, 0.2);
            border-color: var(--gov-accent);
        }

        .gallery-card:hover img {
            transform: scale(1.15);
        }

        .gallery-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(11, 28, 45, 0.9), transparent);
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 25px;
            opacity: 0;
            transition: all 0.4s ease;
        }

        .gallery-card:hover .gallery-overlay {
            opacity: 1;
        }

        .overlay-icon {
            width: 50px;
            height: 50px;
            background: var(--gov-accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            transform: translateY(20px);
            transition: all 0.4s ease 0.1s;
            color: var(--gov-dark);
            font-size: 1.2rem;
        }

        .gallery-card:hover .overlay-icon {
            transform: translateY(0);
        }

        .overlay-text {
            color: var(--gov-white);
            transform: translateY(20px);
            transition: all 0.4s ease 0.2s;
        }

        .overlay-text h5 {
            font-weight: 700;
            margin-bottom: 5px;
            font-size: 1.1rem;
        }

        .overlay-text span {
            font-size: 0.85rem;
            opacity: 0.8;
        }

        .gallery-card:hover .overlay-text {
            transform: translateY(0);
        }

        .section-title {
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--gov-dark);
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .section-title::after {
            content: '';
            flex-grow: 1;
            height: 2px;
            background: var(--gov-border);
        }

        .section-title i {
            color: var(--gov-accent);
        }

        .lightbox-modal {
            display: none;
            position: fixed;
            z-index: 2000;
            inset: 0;
            background-color: rgba(11, 28, 45, 0.98);
            padding: 40px;
        }

        .lightbox-content {
            max-width: 90%;
            max-height: 85vh;
            margin: auto;
            display: block;
            border-radius: 15px;
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
        }

        .lightbox-video {
            width: 100%;
            height: 80vh;
        }

        .lightbox-close {
            position: absolute;
            top: 30px;
            right: 40px;
            color: white;
            font-size: 2rem;
            cursor: pointer;
            transition: 0.3s;
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .lightbox-close:hover {
            background: var(--gov-accent);
            color: var(--gov-dark);
            transform: rotate(90deg);
        }
    </style>
</head>

<body>
    <%-include("navbar.ejs")%>

        <div class="gallery-hero">
            <div class="container hero-content">
                <h1 class="hero-title">Visual Journey</h1>
                <p class="hero-subtitle">
                    Explore the vibrant life at our academy‚Äîfrom intensive classroom sessions to milestone events and
                    student success celebrations.
                </p>
            </div>

            <div class="hero-shape">
                <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"
                    preserveAspectRatio="none"></svg>
            </div>
        </div>


        <section class="py-5">
            <div class="container">

                <h2 class="section-title"><i class="fas fa-camera"></i> Campus Life & Facilities</h2>
                <div class="row g-4 mb-5" id="imageGallery">
                    <% gallery.map(function(val,i){ %>
                        <div class="col-lg-4 col-md-6 gallery-card" data-aos="fade-up"
                            data-src="/images/<%= val.image %>" data-type="image" data-index="<%= i %>">
                            <img src="/images/<%= val.image %>" alt="<%= val.title %>">
                            <div class="gallery-overlay">
                                <div class="overlay-icon"><i class="fas fa-expand"></i></div>
                                <div class="overlay-text">
                                    <h5>
                                        <%= val.title %>
                                    </h5>
                                    <span>
                                        <%= val.subtitle %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>

                <h2 class="section-title"><i class="fas fa-video"></i> Educational Videos</h2>
                <div class="row g-4" id="videoGallery">
                    <%
                        videos.forEach(function(val, i){
                            let embedUrl = val.video_url;

                            // iframe pasted ‡§Ö‡§∏‡•á‡§≤ ‡§§‡§∞ src ‡§ï‡§æ‡§¢
                            if (embedUrl && embedUrl.includes('<iframe')) {
                                let match = embedUrl.match(/src="([^"]+)"/);
                                        if (match && match[1]) embedUrl = match[1];
                                    }

                                    // YouTube watch link
                                    if (embedUrl && embedUrl.includes('youtube.com/watch')) {
                                        embedUrl = embedUrl.replace('watch?v=', 'embed/');
                                    }

                                    // YouTube short link
                                    if (embedUrl && embedUrl.includes('youtu.be')) {
                                        embedUrl = embedUrl.replace('youtu.be/', 'www.youtube.com/embed/');
                                    }

                                    // Vimeo
                                    if (embedUrl && embedUrl.includes('vimeo.com')) {
                                        let vimeoId = embedUrl.split('/').pop();
                                        embedUrl = 'https://player.vimeo.com/video/' + vimeoId;
                                    }
                                %>


                        <div class="col-lg-6 col-md-6">
                            <div class="gallery-card" data-aos="fade-up" data-src="<%= embedUrl %>" data-type="video"
                                data-index="<%= gallery.length + i %>">

                                <!-- üî• VIDEO DIRECT SHOW -->
                                <iframe src="<%= embedUrl %>" width="100%" height="100%" frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen>
                                </iframe>

                                <div class="gallery-overlay">
                                    <div class="overlay-icon"><i class="fas fa-play"></i></div>
                                    <div class="overlay-text">
                                        <h5>
                                            <%= val.title %>
                                        </h5>
                                        <span>
                                            <%= val.subtitle %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% }) %>
                </div>

            </div>
        </section>

        <div id="lightboxModal" class="lightbox-modal">
            <span class="lightbox-close">&times;</span>
            <div class="lightbox-counter">
                <span id="currentIndex">1</span> / <span id="totalItems">10</span>
            </div>
            <div class="lightbox-nav">
                <button id="prevBtn">‚ùÆ</button>
                <button id="nextBtn">‚ùØ</button>
            </div>
            <div id="lightboxContainer"></div>
            <div id="lightboxCaption" class="lightbox-caption"></div>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
        <script>
            AOS.init();

            const galleryItems = [];
            let currentIndex = 0;

            $(document).ready(function () {
                $('.gallery-card').each(function (index) {
                    const item = {
                        index: index,
                        src: $(this).data('src'),
                        type: $(this).data('type'),
                        alt: $(this).find('img').attr('alt') || 'Gallery Item'
                    };
                    galleryItems.push(item);
                });

                $('#totalItems').text(galleryItems.length);

                $('.gallery-card').click(function () {
                    openLightbox($(this).data('index'));
                });

                $('.lightbox-close').click(closeLightbox);
                $('#prevBtn').click(() => navigate(-1));
                $('#nextBtn').click(() => navigate(1));

                $(document).keydown(function (e) {
                    if (e.keyCode === 27) closeLightbox();
                    else if (e.keyCode === 37) navigate(-1);
                    else if (e.keyCode === 39) navigate(1);
                });

                $('#lightboxModal').click(function (e) {
                    if (e.target === this) closeLightbox();
                });
            });

            function openLightbox(index) {
                currentIndex = index;
                updateLightbox();
                $('#lightboxModal').fadeIn(300);
                $('body').css('overflow', 'hidden');
            }

            function closeLightbox() {
                $('#lightboxModal').fadeOut(300);
                $('body').css('overflow', 'auto');
                $('#lightboxContainer iframe').each(function () {
                    $(this).attr('src', $(this).attr('src'));
                });
            }

            function navigate(direction) {
                currentIndex += direction;
                if (currentIndex < 0) currentIndex = galleryItems.length - 1;
                if (currentIndex >= galleryItems.length) currentIndex = 0;
                updateLightbox();
            }

            function updateLightbox() {
                const item = galleryItems[currentIndex];
                $('#currentIndex').text(currentIndex + 1);
                $('#lightboxContainer').empty();
                $('#lightboxCaption').text(item.alt);

                if (item.type === 'image') {
                    const img = $('<img>', { class: 'lightbox-content', src: item.src, alt: item.alt });
                    $('#lightboxContainer').append(img);
                } else if (item.type === 'video') {
                    const iframe = $('<iframe>', {
                        class: 'lightbox-video',
                        src: item.src,
                        frameborder: 0,
                        allow: 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share',
                        allowfullscreen: 'allowfullscreen'
                    });
                    $('#lightboxContainer').append(iframe);
                }
            }
        </script>

        <%-include("footer.ejs")%>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>