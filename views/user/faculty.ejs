<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Faculty - GCA</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --gov-white: #ffffff;
      --gov-bg: #f1f5f9;
      --gov-border: #e2e8f0;
      --gov-text: #1e293b;
      --gov-muted: #64748b;
      --gov-primary: #1e3a8a;
      --gov-success: #10b981;
    }

    /* Faculty Page Specific Styles */
    .page-title {
      background: linear-gradient(135deg, var(--gov-dark) 0%, var(--gov-primary) 100%);
      color: var(--gov-white);
      padding: 70px 0;
      text-align: center;
      position: relative;
      overflow: hidden;
      border-bottom: 4px solid var(--gov-accent);
    }

    .page-title::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.05" d="M0,128L48,122.7C96,117,192,107,288,112C384,117,480,139,576,149.3C672,160,768,160,864,138.7C960,117,1056,75,1152,69.3C1248,64,1344,96,1392,112L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>');
      background-repeat: no-repeat;
      background-position: bottom;
      background-size: cover;
    }

    .page-title h1 {
      font-weight: 800;
      font-size: 3rem;
      margin-bottom: 1rem;
      position: relative;
      color: var(--gov-white);
    }

    .page-title p {
      font-size: 1.2rem;
      opacity: 0.9;
      max-width: 700px;
      margin: 0 auto;
      position: relative;
      color: var(--gov-border);
    }

    .faculty-card {
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      border: 1px solid var(--gov-border);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      height: 100%;
      background: var(--gov-white);
    }

    .faculty-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      border-color: var(--gov-accent);
    }

    .faculty-img-container {
      position: relative;
      overflow: hidden;
      background-color: var(--gov-bg);
    }

    .faculty-img {
      height: 100%;
      width: 100%;
      object-fit: cover;
      object-position: top center;
      transition: transform 0.5s ease;
    }

    .faculty-card:hover .faculty-img {
      transform: scale(1.03);
    }

    .faculty-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, var(--gov-dark), transparent);
      padding: 20px;
      color: var(--gov-white);
      transform: translateY(100%);
      transition: transform 0.3s ease;
    }

    .faculty-card:hover .faculty-overlay {
      transform: translateY(0);
    }

    .faculty-social {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .faculty-social a {
      color: var(--gov-white);
      background: rgba(255, 255, 255, 0.2);
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
    }

    .faculty-social a:hover {
      background: var(--gov-accent);
      transform: translateY(-3px);
    }

    .designation {
      font-weight: 700;
      color: var(--gov-accent);
      font-size: 1.1rem;
      margin-bottom: 5px;
    }

    .section-title {
      font-weight: 800;
      margin-bottom: 40px;
      position: relative;
      display: inline-block;
      color: var(--gov-dark);
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(to right, var(--gov-dark), var(--gov-accent));
      border-radius: 2px;
    }

    .badge-subject {
      background-color: var(--gov-bg);
      color: var(--gov-text);
      margin: 3px;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 0.85rem;
      font-weight: 500;
      display: inline-block;
      border: 1px solid var(--gov-border);
    }

    /* Founder Card Styling */
    .founder-card {
      border-left: 6px solid var(--gov-accent);
      background: linear-gradient(135deg, #fffbf0 0%, var(--gov-white) 100%);
    }

    .founder-card .designation {
      color: var(--gov-accent);
    }

    /* Academic Head Card Styling */
    .academic-card {
      border-left: 6px solid var(--gov-success);
      background: linear-gradient(135deg, #f0fff4 0%, var(--gov-white) 100%);
    }

    .academic-card .designation {
      color: var(--gov-success);
    }

    /* Special Card Styling */
    .special-card {
      border-left: 6px solid #ef4444;
      background: linear-gradient(135deg, #fff0f0 0%, var(--gov-white) 100%);
    }

    .special-card .designation {
      color: #ef4444;
    }

    /* Faculty Stats */
    .faculty-stats {
      display: flex;
      justify-content: space-between;
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid var(--gov-border);
    }

    .stat-item {
      text-align: center;
    }

    .stat-number {
      font-weight: 700;
      font-size: 1.4rem;
      color: var(--gov-dark);
    }

    .stat-label {
      font-size: 0.85rem;
      color: var(--gov-muted);
    }

    /* Faculty Achievements */
    .achievement-badge {
      display: inline-block;
      background: var(--gov-accent);
      color: var(--gov-dark);
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 0.8rem;
      font-weight: 600;
      margin: 2px;
    }

    /* Tabs */
    .faculty-tabs {
      border-bottom: 2px solid var(--gov-border);
      margin-bottom: 30px;
    }

    .nav-tabs .nav-link {
      font-weight: 600;
      color: var(--gov-muted);
      border: none;
      padding: 10px 20px;
      margin-right: 5px;
    }

    .nav-tabs .nav-link.active {
      color: var(--gov-dark);
      border-bottom: 3px solid var(--gov-accent);
      background-color: transparent;
    }

    .nav-tabs .nav-link:hover {
      color: var(--gov-accent) !important;
      background-color: rgba(11, 28, 45, 0.05);
      border-color: transparent;
    }

    /* Dept Badge */
    .dept-badge {
      position: absolute;
      top: 15px;
      right: 15px;
      background: var(--gov-dark);
      color: var(--gov-white);
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      font-weight: 600;
      z-index: 1;
      border: 1px solid var(--gov-accent);
    }

    /* CTA Section */
    .cta-section {
      background: linear-gradient(135deg, var(--gov-dark) 0%, var(--gov-primary) 100%);
      color: var(--gov-white);
      padding: 80px 0;
      text-align: center;
      position: relative;
      overflow: hidden;
      border-top: 4px solid var(--gov-accent);
    }

    .cta-section h2 {
      font-weight: 700;
      margin-bottom: 20px;
    }

    .cta-btn {
      background: var(--gov-white);
      color: var(--gov-dark);
      font-weight: 700;
      padding: 12px 30px;
      border-radius: 50px;
      border: none;
      transition: all 0.3s;
      margin: 10px;
    }

    .cta-btn:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      background: var(--gov-accent);
      color: var(--gov-dark);
    }

    .cta-icon {
      font-size: 3rem;
      margin-bottom: 20px;
      color: var(--gov-accent);
    }

    @media (max-width: 768px) {
      .page-title h1 {
        font-size: 2.2rem;
      }
    }
  </style>
</head>

<body>
  <%- include("navbar.ejs") %>

    <!-- PAGE HEADER -->
    <section class="page-title">
      <div class="container">
        <h1>Our Faculty Team</h1>
        <p class="lead">Learn from India's finest educators, ex-bureaucrats, and subject matter experts with proven
          track records of success in government exams</p>
      </div>
    </section>

    <!-- FACULTY CATEGORY TABS -->
    <section class="container my-5">
      <h2 class="section-title text-center">Meet Our Expert Faculty</h2>

      <ul class="nav nav-tabs faculty-tabs justify-content-center" id="facultyTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="founder-tab" data-bs-toggle="tab" data-bs-target="#founder" type="button"
            role="tab">Founder & Leadership</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="gs-tab" data-bs-toggle="tab" data-bs-target="#gs" type="button"
            role="tab">General
            Studies</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="optional-tab" data-bs-toggle="tab" data-bs-target="#optional" type="button"
            role="tab">Optional Subjects</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link" id="aptitude-tab" data-bs-toggle="tab" data-bs-target="#aptitude" type="button"
            role="tab">Aptitude & CSAT</button>
        </li>

      </ul>
    </section>

    <!-- TAB CONTENT -->
    <div class="tab-content" id="facultyTabContent">

      <!-- FOUNDER & LEADERSHIP -->
      <div class="tab-pane fade show active" id="founder" role="tabpanel">
        <section class="container my-5">
          <div class="row g-4 justify-content-center">
            <% facultyList.filter(f=> ['Founder', 'Academic Head'].includes(f.dept_badge)).forEach(faculty => { %>
              <div class="col-lg-6">
                <div
                  class="card faculty-card <%= faculty.dept_badge === 'Founder' ? 'founder-card' : 'academic-card' %> h-100">
                  <div class="row g-0 h-100">
                    <div class="col-md-5 faculty-img-container h-100">
                      <span class="dept-badge">
                        <%= faculty.dept_badge %>
                      </span>
                      <img src="<%= faculty.image_url %>" class="img-fluid faculty-img h-100" alt="<%= faculty.name %>"
                        style="object-fit: cover;">
                      <div class="faculty-overlay">
                        <div class="faculty-social">
                          <% if(faculty.linkedin_url){ %><a href="<%= faculty.linkedin_url %>"><i
                                class="fab fa-linkedin-in"></i></a>
                            <% } %>
                              <a href="#"><i class="fab fa-twitter"></i></a>
                              <a href="#"><i class="fab fa-youtube"></i></a>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-7">
                      <div class="card-body p-4 d-flex flex-column justify-content-center h-100">
                        <h3 class="mb-1">
                          <%= faculty.name %>
                        </h3>
                        <p class="designation mb-3">
                          <%= faculty.designation %>
                        </p>
                        <div class="mb-3">
                          <span class="achievement-badge">
                            <%= faculty.experience %>
                          </span>
                        </div>
                        <p class="small mb-2"><strong>Qualification:</strong>
                          <%= faculty.qualification %>
                        </p>
                        <p class="small"><strong>Expertise:</strong>
                          <%= faculty.expertise %>
                        </p>
                        <p class="mt-2 small text-muted">
                          <%= faculty.description %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </section>
      </div>

      <!-- GENERAL STUDIES FACULTY -->
      <div class="tab-pane fade" id="gs" role="tabpanel">
        <section class="container my-5">
          <div class="row g-4 justify-content-center">
            <% facultyList.filter(f=> ['Polity & Governance', 'Geography & Environment',
              'Economics'].includes(f.dept_badge)).forEach(faculty => { %>
              <div class="col-lg-6">
                <div class="card faculty-card h-100">
                  <div class="row g-0 h-100">
                    <div class="col-md-5 faculty-img-container h-100">
                      <span class="dept-badge">
                        <%= faculty.dept_badge %>
                      </span>
                      <img src="<%= faculty.image_url %>" class="faculty-img h-100" alt="<%= faculty.name %>"
                        style="object-fit: cover;">
                    </div>
                    <div class="col-md-7">
                      <div class="card-body p-4 d-flex flex-column justify-content-center h-100">
                        <h5 class="mb-1 text-dark fw-bold">
                          <%= faculty.name %>
                        </h5>
                        <p class="designation mb-3">
                          <%= faculty.designation %>
                        </p>
                        <p class="small mb-2 text-muted"><strong>Qualification:</strong>
                          <%= faculty.qualification %>
                        </p>
                        <p class="small text-muted"><strong>Experience:</strong>
                          <%= faculty.experience %>
                        </p>
                        <div class="mb-3 mt-2">
                          <% faculty.expertise.split(',').forEach(skill=> { %>
                            <span class="badge-subject">
                              <%= skill.trim() %>
                            </span>
                            <% }); %>
                        </div>
                        <p class="mt-2 small text-muted">
                          <%= faculty.description %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </section>
      </div>

      <!-- OPTIONAL SUBJECTS FACULTY -->
      <div class="tab-pane fade" id="optional" role="tabpanel">
        <section class="container my-5">
          <div class="row g-4 justify-content-center">
            <% facultyList.filter(f=> f.dept_badge === 'Optional Subject').forEach(faculty => { %>
              <div class="col-lg-6">
                <div class="card faculty-card special-card h-100">
                  <div class="row g-0 h-100">
                    <div class="col-md-5 faculty-img-container h-100">
                      <span class="dept-badge">
                        <%= faculty.dept_badge %>
                      </span>
                      <img src="<%= faculty.image_url %>" class="faculty-img h-100" alt="<%= faculty.name %>"
                        style="object-fit: cover;">
                    </div>
                    <div class="col-md-7">
                      <div class="card-body p-4 d-flex flex-column justify-content-center h-100">
                        <h5 class="mb-1 text-dark fw-bold">
                          <%= faculty.name %>
                        </h5>
                        <p class="designation mb-3">
                          <%= faculty.designation %>
                        </p>
                        <p class="small mb-2 text-muted"><strong>Qualification:</strong>
                          <%= faculty.qualification %>
                        </p>
                        <p class="small text-muted"><strong>Experience:</strong>
                          <%= faculty.experience %>
                        </p>
                        <div class="mb-3 mt-2">
                          <% faculty.expertise.split(',').forEach(skill=> { %>
                            <span class="badge-subject">
                              <%= skill.trim() %>
                            </span>
                            <% }); %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </section>
      </div>

      <!-- APTITUDE & CSAT FACULTY -->
      <div class="tab-pane fade" id="aptitude" role="tabpanel">
        <section class="container my-5">
          <div class="row g-4 justify-content-center">
           <% facultyList
  .filter(f => ['Quantitative Aptitude', 'Reasoning & CSAT'].includes(f.dept_badge))
  .forEach(faculty => { %>
              <div class="col-lg-6">
                <div class="card faculty-card h-100">
                  <div class="row g-0 h-100">
                    <div class="col-md-5 faculty-img-container h-100">
                      <span class="dept-badge">
                        <%= faculty.dept_badge %>
                      </span>
                      <img src="<%= faculty.image_url %>" class="faculty-img h-100" alt="<%= faculty.name %>"
                        style="object-fit: cover;">
                    </div>
                    <div class="col-md-7">
                      <div class="card-body p-4 d-flex flex-column justify-content-center h-100">
                        <h5 class="mb-1 text-dark fw-bold">
                          <%= faculty.name %>
                        </h5>
                        <p class="designation mb-3">
                          <%= faculty.designation %>
                        </p>
                        <p class="small mb-2 text-muted"><strong>Qualification:</strong>
                          <%= faculty.qualification %>
                        </p>
                        <p class="small text-muted"><strong>Experience:</strong>
                          <%= faculty.experience %>
                        </p>
                        <p class="mt-2 small text-muted">
                          <%= faculty.description %>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }); %>
          </div>
        </section>
      </div>

    </div>

    <!-- FACULTY ACHIEVEMENTS SECTION -->
    <section class="container my-5 py-5">
      <div class="row">
        <div class="col-md-12 text-center mb-5">
          <h2 class="section-title">Our Faculty's Achievements</h2>
          <p class="lead">Recognized excellence in government exam coaching</p>
        </div>

        <div class="col-md-3 col-6 text-center mb-4">
          <div class="display-4 fw-bold text-primary"><span class="count-up" data-target="5000">0</span>+</div>
          <p class="text-muted">Successful Selections</p>
        </div>

        <div class="col-md-3 col-6 text-center mb-4">
          <div class="display-4 fw-bold text-primary"><span class="count-up" data-target="150">0</span>+</div>
          <p class="text-muted">Rank Holders (Top 100)</p>
        </div>

        <div class="col-md-3 col-6 text-center mb-4">
          <div class="display-4 fw-bold text-primary"><span class="count-up" data-target="25">0</span>+</div>
          <p class="text-muted">Books & Publications</p>
        </div>

        <div class="col-md-3 col-6 text-center mb-4">
          <div class="display-4 fw-bold text-primary"><span class="count-up" data-target="2000">0</span>+</div>
          <p class="text-muted">Hours of Video Content</p>
        </div>
      </div>
    </section>

    <!-- CALL TO ACTION -->
    <section class="cta-section">
      <div class="container">
        <i class="fas fa-chalkboard-teacher cta-icon"></i>
        <h2>Learn from India's Best Faculty</h2>
        <p class="lead mb-4">Join thousands of successful aspirants who transformed their careers with our expert
          guidance</p>

        <a href="/contact" class="btn cta-btn btn-lg">
          <i class="fas fa-calendar-check me-2"></i>Book Free Demo Class
        </a>

        <button id="downloadBrochure" class="btn cta-btn btn-lg"
          style="background: var(--gov-accent); color: var(--gov-dark);">
          <i class="fas fa-download me-2"></i>Download Faculty Brochure
        </button>

        <div class="mt-4">
          <p><i class="fas fa-phone-alt me-2"></i> Call for counseling: <a href="tel:9689255216"
              style="color: inherit; text-decoration: none;">9689255216</a></p>
        </div>
      </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
    <script>
      // Initialize tooltips
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
      })

      // Faculty Brochure PDF Generation
      document.getElementById('downloadBrochure').addEventListener('click', function () {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        // Header
        doc.setFillColor(30, 58, 138); // primary color
        doc.rect(0, 0, 210, 40, 'F');
        doc.setTextColor(255, 255, 255);
        doc.setFontSize(22);
        doc.text("GOVERNMENT COACHING ACADEMY", 105, 15, { align: "center" });
        doc.setFontSize(16);
        doc.text("FACULTY BROCHURE", 105, 25, { align: "center" });
        doc.setFontSize(10);
        doc.text("Empowering Success through Quality Education", 105, 32, { align: "center" });

        let yPos = 50;

        // Prepare Faculty Data
        const facultySections = [
          { name: "FOUNDER & LEADERSHIP", id: "founder" },
          { name: "GENERAL STUDIES", id: "gs" },
          { name: "OPTIONAL SUBJECTS", id: "optional" },
          { name: "APTITUDE & CSAT", id: "aptitude" }
        ];

        facultySections.forEach(section => {
          doc.setTextColor(30, 58, 138);
          doc.setFontSize(14);
          doc.setFont("helvetica", "bold");
          doc.text(section.name, 14, yPos);
          yPos += 10;

          const cards = document.querySelectorAll(`#${section.id} .faculty-card`);
          const tableData = [];

          cards.forEach(card => {
            const nameElement = card.querySelector('h3, h5');
            const name = nameElement ? nameElement.innerText.trim() : "Unknown";

            const designationElement = card.querySelector('.designation');
            const designation = designationElement ? designationElement.innerText.trim() : "Faculty";

            const rawText = card.innerText;

            // Extracting details using regex
            const qualMatch = rawText.match(/Qualification:\s*([^\n\r]*)/i);
            const qual = qualMatch ? qualMatch[1].trim() : "";

            const expMatch = rawText.match(/(?:Expertise|Experience):\s*([^\n\r]*)/i);
            const exp = expMatch ? expMatch[1].trim() : "";

            tableData.push([name, designation, qual, exp]);
          });

          doc.autoTable({
            startY: yPos,
            head: [['Name', 'Designation', 'Qualification', 'Expertise/Exp']],
            body: tableData,
            theme: 'striped',
            headStyles: { fillColor: [30, 58, 138] },
            margin: { top: 10 },
            didDrawPage: (data) => {
              yPos = data.cursor.y + 15;
            }
          });

          yPos = doc.lastAutoTable.finalY + 15;

          if (yPos > 250 && section !== facultySections[facultySections.length - 1]) {
            doc.addPage();
            yPos = 20;
          }
        });

        // Footer
        const pageCount = doc.internal.getNumberOfPages();
        for (let i = 1; i <= pageCount; i++) {
          doc.setPage(i);
          doc.setFontSize(10);
          doc.setTextColor(150);
          doc.text("Â© 2026 Government Coaching Academy | +91-9876543210", 105, 285, { align: "center" });
          doc.text(`Page ${i} of ${pageCount}`, 190, 285);
        }

        doc.save("Faculty_Brochure_GCA.pdf");
      });

      // Helper for contains selector (jQuery-like)
      window.addEventListener('load', () => {
        // Number Counter Animation
        const counters = document.querySelectorAll('.count-up');
        const speed = 200;

        const animateCounters = (counter) => {
          const target = +counter.getAttribute('data-target');
          let count = 0;
          const inc = target / speed;

          const updateCount = () => {
            count += inc;
            if (count < target) {
              counter.innerText = Math.ceil(count);
              setTimeout(updateCount, 1);
            } else {
              counter.innerText = target;
            }
          };
          updateCount();
        };

        const observerOptions = {
          threshold: 0.5
        };

        const observer = new IntersectionObserver((entries, observer) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              animateCounters(entry.target);
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);

        counters.forEach(counter => {
          observer.observe(counter);
        });
      });
    </script>
