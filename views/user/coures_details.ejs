<style>
:root {
  --gov-dark: #0b1c2d;
  --gov-accent: #f59e0b; /* Yellow-orange accent */
  --gov-bg: #f8fafc;
  --gov-white: #ffffff;
  --gov-text: #1e293b;
  --gov-muted: #475569;
  --gov-border: #e5e7eb;
  --gov-fees: #16a34a; /* Green for fees */
}

body{
  background:var(--gov-bg);
  font-family:"Segoe UI", sans-serif;
  margin:0;
  padding:0;
}

.container{
  max-width:1200px;
  margin:0 auto;
  padding:0 20px;
}

.page-title{
  text-align:center;
  font-size:32px;
  font-weight:700;
  padding:30px 0 20px;
  color:var(--gov-dark);
}

/* === GRID OF 3 CARDS PER ROW === */
.course-row{
  display:grid;
  grid-template-columns:repeat(3,1fr);
  gap:24px;
  margin-bottom:28px;
}

.course-card{
  background:var(--gov-white);
  border-radius:8px;
  overflow:hidden;
  border-left:6px solid var(--gov-accent);
  box-shadow:0 4px 16px rgba(0,0,0,0.08);
  transition:.3s ease;
}

.course-card:hover{
  transform:translateY(-4px);
  box-shadow:0 6px 18px rgba(0,0,0,0.10);
}

.course-img{
  width:100%;
  height:200px;
  object-fit:cover;
}

.course-content{
  padding:18px 20px;
}

.course-title{
  font-size:20px;
  font-weight:700;
  margin-bottom:8px;
  color:var(--gov-text);
}

.course-info{
  font-size:14px;
  color:var(--gov-muted);
  margin-bottom:6px;
}

.duration{
  font-size:14px;
  font-weight:500;
  color:var(--gov-text);
  margin-bottom:4px;
}

.course-extra{
  font-size:13px;
  color:var(--gov-muted);
  line-height:1.45;
  margin-bottom:8px;
}

/* Fees green and visible */
.fees{
  font-size:16px;
  font-weight:700;
  color:var(--gov-fees);
  margin-bottom:10px;
}

.btn{
  display:inline-block;
  background:var(--gov-accent);
  color:white;
  padding:7px 16px;
  border-radius:6px;
  font-size:14px;
  text-decoration:none;
  font-weight:600;
}

/* Responsive */
@media(max-width:900px){
  .course-row{
    grid-template-columns:repeat(2,1fr);
  }
}
@media(max-width:600px){
  .course-row{
    grid-template-columns:repeat(1,1fr);
  }
}

footer{
  margin-top:0 !important;
  padding-top:10px;
}
</style>

