    <style>
        :root {
            --gov-dark: #0b1c2d;
            --gov-accent: #f59e0b;
            --gov-bg: #f8fafc;
            --gov-white: #ffffff;
            --gov-text: #1e293b;
            --gov-muted: #475569;
            --gov-border: #e5e7eb;
            --gov-green: #16a34a;
        }

        body {
            background: var(--gov-bg);
            font-family: system-ui, -apple-system, sans-serif;
        }

        /* PREMIUM HERO SECTION */
        .gallery-hero {
            background: linear-gradient(rgba(11, 28, 45, 0.9), rgba(11, 28, 45, 0.8)),
                url("https://images.unsplash.com/photo-1523050853064-dbad350e02ee?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80") center/cover no-repeat;
            padding: 140px 0;
            text-align: center;
            color: var(--gov-white);
            position: relative;
            overflow: hidden;
        }

        .gallery-hero h1 {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 20px;
            letter-spacing: -1px;
        }

        .gallery-hero p {
            font-size: 1.25rem;
            max-width: 700px;
            margin: 0 auto;
            opacity: 0.9;
            line-height: 1.6;
        }

        .hero-shape {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            line-height: 0;
            transform: rotate(180deg);
        }

        .hero-shape svg {
            position: relative;
            display: block;
            width: calc(100% + 1.3px);
            height: 50px;
        }

        .hero-shape .shape-fill {
            fill: var(--gov-bg);
        }

        /* GALLERY CARDS */
        .gallery-card {
            position: relative;
            overflow: hidden;
            border-radius: 20px;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            height: 280px;
            border: 4px solid var(--gov-white);
        }

        .gallery-card img,
        .gallery-card iframe {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s ease;
        }

        .gallery-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 20px 40px rgba(11, 28, 45, 0.2);
            border-color: var(--gov-accent);
        }

        .gallery-card:hover img {
            transform: scale(1.15);
        }

        /* OVERLAY EFFECT */
        .gallery-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(11, 28, 45, 0.9), transparent);
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 25px;
            opacity: 0;
            transition: all 0.4s ease;
        }

        .gallery-card:hover .gallery-overlay {
            opacity: 1;
        }

        .overlay-icon {
            width: 50px;
            height: 50px;
            background: var(--gov-accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            transform: translateY(20px);
            transition: all 0.4s ease 0.1s;
            color: var(--gov-dark);
            font-size: 1.2rem;
        }

        .gallery-card:hover .overlay-icon {
            transform: translateY(0);
        }

        .overlay-text {
            color: var(--gov-white);
            transform: translateY(20px);
            transition: all 0.4s ease 0.2s;
        }

        .overlay-text h5 {
            font-weight: 700;
            margin-bottom: 5px;
            font-size: 1.1rem;
        }

        .overlay-text span {
            font-size: 0.85rem;
            opacity: 0.8;
        }

        .gallery-card:hover .overlay-text {
            transform: translateY(0);
        }

        .section-title {
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--gov-dark);
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .section-title::after {
            content: '';
            flex-grow: 1;
            height: 2px;
            background: var(--gov-border);
        }

        .section-title i {
            color: var(--gov-accent);
        }

        /* LIGHTBOX MODAL UPGRADE */
        .lightbox-modal {
            display: none;
            position: fixed;
            z-index: 2000;
            inset: 0;
            background-color: rgba(11, 28, 45, 0.98);
            padding: 40px;
        }

        .lightbox-content {
            max-width: 90%;
            max-height: 85vh;
            margin: auto;
            display: block;
            border-radius: 15px;
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
        }

        .lightbox-close {
            position: absolute;
            top: 30px;
            right: 40px;
            color: white;
            font-size: 2rem;
            cursor: pointer;
            transition: 0.3s;
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .lightbox-close:hover {
            background: var(--gov-accent);
            color: var(--gov-dark);
            transform: rotate(90deg);
        }

        .insight-card {
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
            border: 1px solid var(--gov-border);
            border-left: 6px solid var(--gov-accent) !important;
        }

        .insight-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(11, 28, 45, 0.1) !important;
        }

        .insight-card .stat-badge {
            transition: all 0.4s ease;
        }

        .insight-card:hover .stat-badge {
            transform: scale(1.1) rotate(5deg);
            border-color: var(--gov-accent) !important;
        }

        @media (max-width: 768px) {
            .gallery-title {
                font-size: 2.5rem;
            }
        }
    </style>
</head>

