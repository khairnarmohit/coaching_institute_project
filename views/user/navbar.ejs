<style>
  :root {
    --gov-dark: #0b1c2d;
    --gov-accent: #f59e0b;
    --gov-light: #f8fafc;
  }

  /* Global Layout Unification */
  html {
    overflow-y: scroll;
    /* Always show scrollbar to prevent layout jump */
  }

  body {
    margin: 0;
    padding: 0;
    padding-top: 75px;
    /* Added padding to prevent content overlap with fixed navbar */
    font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    background-color: #f1f5f9;
  }

  /* Unify all containers to 1200px for consistency */
  .container {
    max-width: 1200px !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }

  /* NAVBAR styling */
  .navbar {
    background: #ffffff;
    border-bottom: 3px solid var(--gov-accent);
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.08);
    z-index: 2000 !important;
    /* Extremely high z-index to always stay on top */
  }

  /* Brand */
  .navbar-brand {
    font-weight: 800;
    color: var(--gov-dark) !important;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .navbar-brand i {
    background: var(--gov-accent);
    color: var(--gov-dark);
    padding: 8px;
    border-radius: 6px;
    font-size: 18px;
  }

  /* Nav links */
  .nav-link {
    font-weight: 600;
    color: #1e293b !important;
    margin: 0 3px;
    padding: 8px 14px !important;
    border-radius: 4px;
    transition: 0.3s;
  }

  .nav-link:hover {
    background: var(--gov-light);
    color: var(--gov-dark) !important;
  }

  /* Active link */
  .nav-link.active {
    background: var(--gov-accent);
    color: var(--gov-dark) !important;
  }

  /* Dropdown */
  .dropdown-menu {
    border: 1px solid #e5e7eb;
    border-radius: 4px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .dropdown-item {
    font-size: 14px;
    font-weight: 500;
  }

  .dropdown-item:hover {
    background: #f1f5f9;
    color: var(--gov-dark);
  }

  /* Toggler */
  .navbar-toggler {
    border: 1px solid #cbd5e1;
  }

  .navbar-toggler:focus {
    box-shadow: none;
  }

  /* Mobile container padding */
  @media (max-width: 1200px) {
    .container {
      padding-left: 20px !important;
      padding-right: 20px !important;
    }
  }
</style>

<nav class="navbar navbar-expand-lg fixed-top">
  <div class="container">

    <!-- Brand -->
    <a class="navbar-brand" href="/">
