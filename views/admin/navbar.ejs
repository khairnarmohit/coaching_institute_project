    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #0b1c2d;
            --secondary-color: #475569;
            --accent-color: #f59e0b;
            --danger-color: #dc2626;
            --success-color: #16a34a;
            --light-bg: #f8fafc;
            --border-color: #e5e7eb;
            --text-dark: #1e293b;
        }

        body {
            background-color: var(--light-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-dark);
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Navigation */
        .sidebar {
            background: linear-gradient(135deg, var(--primary-color) 0%, #1e3a8a 100%);
            color: white;
            height: 100vh;
            width: 260px;
            overflow-y: auto;
            padding: 20px 0;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            position: sticky;
            top: 0;
        }

        .sidebar-header {
            padding: 20px 15px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 20px;
            font-weight: bold;
            text-decoration: none;
            color: white;
        }

        .sidebar-logo i {
            font-size: 24px;
            color: var(--accent-color);
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
        }

        .sidebar-menu li {
            margin: 0;
            position: relative;
        }

        .sidebar-menu .menu-item {
            display: block;
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
            cursor: pointer;
        }

        .sidebar-menu .menu-item:hover,
        .sidebar-menu .menu-item.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border-left-color: var(--accent-color);
            padding-left: 20px;
        }

        .sidebar-menu .menu-item i {
            width: 20px;
            margin-right: 10px;
        }

        .submenu {
            list-style: none;
            padding: 0;
            display: none;
            background-color: rgba(0, 0, 0, 0.2);
        }

        .submenu.show {
            display: block;
        }

        .submenu li a {
            display: block;
            padding: 10px 20px 10px 50px;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            font-size: 13px;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .submenu li a:hover,
        .submenu li a.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
            padding-left: 55px;
        }

        /* Content area for demo */
        .content {
            flex: 1;
            padding: 40px;
        }

        .content h1 {
            color: var(--primary-color);
            margin-bottom: 20px;
        }

        .content p {
            line-height: 1.6;
            margin-bottom: 15px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .sidebar-header {
                text-align: center;
                padding: 15px 5px;
            }

            .sidebar-logo span {
                display: inline;
            }

            .sidebar-menu {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
            }

            .sidebar-menu li {
                flex: 1 0 auto;
            }

            .sidebar-menu .menu-item {
                padding: 15px 10px;
                text-align: center;
                border-left: none;
                border-bottom: 4px solid transparent;
            }

            .sidebar-menu .menu-item:hover,
            .sidebar-menu .menu-item.active {
                border-left: none;
                border-bottom-color: var(--accent-color);
            }

            .sidebar-menu .menu-item i {
                width: 100%;
                margin-right: 0;
                margin-bottom: 5px;
            }

            .submenu {
                position: absolute;
                top: 100%;
                left: 0;
                width: 100%;
                z-index: 1000;
            }

            .submenu li a span {
                display: inline;
            }
        }
    </style>
</head>

