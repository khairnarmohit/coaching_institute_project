<%- include('navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>EduInstitute</title>

<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
body{
    background:#f4f6fb;
    font-family:Arial, sans-serif;
}

.study-container{
    max-width:1100px;
    margin:10px auto;
    margin-left: 30px;
    margin-right: 30px;
    display:grid;
    grid-template-columns:repeat(auto-fit,minmax(300px,1fr));
    gap:20px;
}

.study-card{
    background:#fff;
    border-radius:14px;
    padding:25px;
    box-shadow:0 4px 14px rgba(0,0,0,0.08);
}

.study-card h4{
    margin-bottom:8px;
}

.study-card p{
    color:#666;
    font-size:14px;
}

.pdf-btn{
    display:block;
    margin-top:15px;
    background:#1e4db7;
    color:white;
    padding:12px;
    text-align:center;
    border-radius:8px;
    text-decoration:none;
    font-weight:500;
}

.pdf-btn:hover{
    background:#163d94;
}
</style>
</head>

<body>

<header class="text-center mt-4">
    <h1>Syllabus</h1>
    <p class="text-muted">Download or view syllabus PDFs</p>
</header>

<section class="study-container">

    <div class="study-card">
        <h4>MPSC</h4>
        <p>Complete updated syllabus PDF</p>
        <a href="image/mpsc.pdf" target="_blank" class="pdf-btn">View PDF</a>
    </div>

    <div class="study-card">
        <h4>UPSC</h4>
        <p>Complete updated syllabus PDF</p>
        <a href="pdf/upsc.pdf" target="_blank" class="pdf-btn">View PDF</a>
    </div>

    <div class="study-card">
        <h4>Banking Exams</h4>
        <p>Complete updated syllabus PDF</p>
        <a href="pdf/banking.pdf" target="_blank" class="pdf-btn">View PDF</a>
    </div>

    <div class="study-card">
        <h4>Police Bharti</h4>
        <p>Complete updated syllabus PDF</p>
        <a href="pdf/police.pdf" target="_blank" class="pdf-btn">View PDF</a>
    </div>

    <div class="study-card">
        <h4>Talathi</h4>
        <p>Complete updated syllabus PDF</p>
        <a href="pdf/talathi.pdf" target="_blank" class="pdf-btn">View PDF</a>
    </div>

    <div class="study-card">
        <h4>Railway Exams</h4>
        <p>Complete updated syllabus PDF</p>
        <a href="pdf/railway.pdf" target="_blank" class="pdf-btn">View PDF</a>
    </div>

</section>

</body>
</html>

