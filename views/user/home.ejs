<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GCA-Institute</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- NAVBAR -->
    <%- include('navbar') %>

        <% if (banner) { %>
            <section class="text-white min-vh-100 d-flex align-items-center position-relative overflow-hidden">

                <!-- Background Image -->
                <img src="./images/<%= banner.banner_image %>"
                    class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover">

                <!-- Gradient Overlay -->
                <div class="position-absolute top-0 start-0 w-100 h-100"
                    style="background:linear-gradient(90deg,rgba(0,0,0,.75),rgba(0,0,0,.35));">
                </div>

                <div class="container position-relative">
                    <div class="row align-items-center">
                        <div class="col-lg-7">

                            <!-- Badge -->
                            <span class="badge bg-warning text-dark px-3 py-2 mb-3">
                                <%= banner.badge_text %>
                            </span>

                            <!-- Heading -->
                            <h1 class="display-4 fw-bold mt-3">
                                <%= banner.heading_main %><br>
                                    <span class="text-warning">
                                        <%= banner.heading_highlight %>
                                    </span>
                            </h1>

                            <!-- Description -->
                            <p class="lead mt-4">
                                <%= banner.description %>
                            </p>

                            <!-- Buttons -->
                            <div class="mt-4">
                                <a href="<%= banner.btn1_link %>" class="btn btn-primary btn-lg me-3 px-4">
                                    <%= banner.btn1_text %>
                                </a>

                                <a href="<%= banner.btn2_link %>" class="btn btn-outline-warning btn-lg px-4">
                                    <%= banner.btn2_text %>
                                </a>
                            </div>

                            <!-- Stats -->
                            <div class="d-flex gap-4 mt-5" id="counterSection">
                                <div>
                                    <h3 class="fw-bold text-warning">
                                        <span class="counter" data-target="<%= banner.years_exp %>">0</span>+
                                    </h3>
                                    <small>Years Experience</small>
                                </div>


                                <div>
                                    <h3 class="fw-bold text-warning">
                                        <span class="counter" data-target="<%= banner.selections %>">0</span>+
                                    </h3>
                                    <small>Selections</small>
                                </div>


                                <div>
                                    <h3 class="fw-bold text-warning">
                                        <span class="counter" data-target="<%= banner.satisfaction %>">0</span>%
                                    </h3>
                                    <small>Satisfaction</small>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </section>
            <% } %>




                <!-- ....................................Featured Courses.................................... -->
                <section class="featured-course py-5 bg-light">
                    <div class="container">
                        <h2 class="text-center text-warning fw-bold mb-5">
                            Featured Courses
                        </h2>

                        <div class="row g-4 justify-content-center">
                            <% if (courses && courses.length> 0) { %>
                                <% for (let i=0; i < courses.length; i++) { %>
                                    <div class="col-md-4">
                                        <div class="featured-card">
                                            <h4>
                                                <%= courses[i].title %>
                                            </h4>
                                            <p>
                                                <%= courses[i].description %>
                                            </p>
                                            <a href="<%= courses[i].url %>" class="featured-btn">
                                                Explore Course
                                            </a>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                        </div>
                    </div>
                </section>




                <!-- .........................Our Achievements................. -->
                <section class="achievement-section bg-light py-5">
                    <div class="container" id="achievementSection">
                        <h2 class="text-center text-warning fw-bold mb-5">Our Achievements</h2>

                        <div class="row g-4 text-center">
                            <% if (achievements && achievements.length> 0) { %>

                                <% achievements.forEach(a=> { %>
                                    <div class="col-md-3">
                                        <div class="achievement-box">
  <span class="achievement-number">
    <span class="counter" data-target="<%= a.value %>">0</span><%= a.suffix %>
  </span>
  <p><%= a.title %></p>
</div>

                                    </div>
                                    <% }) %>

                                        <% } else { %>
                                            <p class="text-center">No achievements available</p>
                                            <% } %>
                        </div>
                    </div>
                </section>


                <!-- .........................................Why choose section..................................... -->
                <section class="why-choose-us py-5">
                    <div class="container">
                        <div class="text-center mb-5">
                            <h2 class="fw-bold text-warning">Why Choose Us</h2>
                            <p class="text-muted">
                                We follow a structured, transparent, and result-oriented approach inspired by
                                government examination standards.
                            </p>
                        </div>

                        <div class="row g-4">
                            <!-- Card 1 -->
                            <div class="col-md-4">
                                <div class="why-card">
                                    <div class="icon-box">
                                        <i class="bi bi-person-badge"></i>
                                    </div>
                                    <h5>Experienced Faculty</h5>
                                    <p>
                                        Our faculty consists of subject experts with years of experience in
                                        government exam coaching and real exam exposure.
                                    </p>
                                </div>
                            </div>

                            <!-- Card 2 -->
                            <div class="col-md-4">
                                <div class="why-card">
                                    <div class="icon-box">
                                        <i class="bi bi-book"></i>
                                    </div>
                                    <h5>Updated Study Material</h5>
                                    <p>
                                        Study material is prepared as per the latest syllabus, exam patterns,
                                        and official government notifications.
                                    </p>
                                </div>
                            </div>

                            <!-- Card 3 -->
                            <div class="col-md-4">
                                <div class="why-card">
                                    <div class="icon-box">
                                        <i class="bi bi-pencil-square"></i>
                                    </div>
                                    <h5>Regular Mock Tests</h5>
                                    <p>
                                        Weekly and monthly mock tests designed exactly like real government exams
                                        to improve accuracy and time management.
                                    </p>
                                </div>
                            </div>

                            <!-- Card 4 -->
                            <div class="col-md-6">
                                <div class="why-card">
                                    <div class="icon-box">
                                        <i class="bi bi-question-circle"></i>
                                    </div>
                                    <h5>Doubt Clearing Sessions</h5>
                                    <p>
                                        Dedicated doubt-solving sessions ensure that every student clearly
                                        understands concepts without hesitation.
                                    </p>
                                </div>
                            </div>

                            <!-- Card 5 -->
                            <div class="col-md-6">
                                <div class="why-card">
                                    <div class="icon-box">
                                        <i class="bi bi-bullseye"></i>
                                    </div>
                                    <h5>Personal Mentorship</h5>
                                    <p>
                                        One-to-one mentorship, progress tracking, and personalized guidance
                                        to keep students focused and motivated.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


                <!-- .........................................Upcoming Batches.................................... -->
                <section class="upcoming-batches py-5 mt-5">
                    <div class="container">

                        <!-- Section Header -->
                        <div class="section-header mb-4 d-flex align-items-center gap-3">
                            <h2 class="mb-0">Upcoming Batches</h2>
                            <span class="badge-note">Official Notification</span>
                        </div>

                        <div class="batch-wrapper">

                            <% if (batches && batches.length> 0) { %>

                                <% for (let i=0; i < batches.length; i++) { const b=batches[i]; %>

                                    <div class="batch-row">

                                        <!-- LEFT : Batch Info -->
                                        <div class="batch-info">
                                            <h5>
                                                <%= b.title %>
                                            </h5>
                                            <p>
                                                <%= b.description %>
                                            </p>
                                        </div>

                                        <!-- CENTER : Meta -->
                                        <div class="batch-meta">
                                            <div class="meta-box">
                                                <span>Duration</span>
                                                <strong>
                                                    <%= b.duration %>
                                                </strong>
                                            </div>
                                            <div class="meta-box">
                                                <span>Fees</span>
                                                <strong>
                                                    <%= b.fees %>
                                                </strong>
                                            </div>
                                        </div>

                                        <!-- RIGHT : Action -->
                                        <div class="batch-action">
                                            <a href="/admission" class="apply-btn">
                                                Apply Now
                                            </a>
                                        </div>

                                    </div>

                                    <% } %>

                                        <% } else { %>
                                            <p class="text-center text-muted py-4">
                                                No upcoming batches available at the moment.
                                            </p>
                                            <% } %>

                        </div>
                    </div>
                </section>




                <!-- ================= TESTIMONIALS SECTION ================= -->
                <section class="gov-testimonials py-5">
  <div class="container">

    <!-- Header -->
    <div class="text-center mb-5">
      <h2 class="fw-bold text-dark position-relative d-inline-block">
        Testimonials
        <span class="title-underline bg-warning"></span>
      </h2>
      <div class="mt-2">
        <span class="gov-tag">Official Feedback</span>
      </div>
    </div>

    <!-- ================= STUDENT REVIEWS ================= -->
    <div class="mb-5">
      <h4 class="section-subtitle mb-2">
        Student Reviews
        
      </h4>

      <div class="row g-4">

        <% 
          const studentReviews = testimonials.filter(t => t.type === 'student');
        %>

        <% if (studentReviews.length > 0) { %>
          <% for (let i = 0; i < studentReviews.length; i++) { 
               const t = studentReviews[i]; %>

            <div class="col-md-6">
              <div class="testimonial-card h-100">
                <div class="quote-icon">❝</div>

                <p class="testimonial-text me-2">
                  <%= t.message %>
                </p>

                <div class="reviewer-box">
                  <div class="avatar">
                    <%= t.name.charAt(0) %>
                  </div>
                  <div>
                    <strong><%= t.name %></strong> <span class="status-badge">Student</span><br>
                    <small><%= t.role %></small><br>
                    
                  </div>
                </div>
              </div>
            </div>

          <% } %>
        <% } else { %>
          <p class="text-center text-muted">No student reviews available.</p>
        <% } %>

      </div>
    </div>


        <!-- ================= VIDEO TESTIMONIALS ================= -->
    <div class="mb-5">
      <h4 class="section-subtitle text-start mb-2">
        Video Testimonials
      </h4>

      <div class="row g-4">

        <% 
          const videoReviews = testimonials.filter(t => t.type === 'video');
        %>

        <% if (videoReviews.length > 0) { %>
          <% for (let i = 0; i < videoReviews.length; i++) { 
               const t = videoReviews[i]; %>

            <div class="col-md-6">
              <div class="video-testimonial-card">
                <div class="video-frame">
                  <div class="ratio ratio-16x9">
                    <iframe
                      src="<%= t.video_url %>"
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen>
                    </iframe>
                  </div>
                </div>

              </div>
            </div>

          <% } %>
        <% } else { %>
          <p class="text-center text-muted">No video testimonials available.</p>
        <% } %>

      </div>
    </div>


        <!-- ================= PARENT REVIEWS ================= -->
    <div>
      <h4 class="section-subtitle text-start mb-2">Parent Reviews</h4>

      <div class="row g-4">

        <% 
          const parentReviews = testimonials.filter(t => t.type === 'parent');
        %>

        <% if (parentReviews.length > 0) { %>
          <% for (let i = 0; i < parentReviews.length; i++) { 
               const t = parentReviews[i]; %>

            <div class="col-md-6">
              <div class="testimonial-card h-100 me-2">
                <span class="quote-icon">❝</span>

                <p class="testimonial-text me-3">
                  <%= t.message %>
                </p>

                <div class="mt-3">
                  <strong><%= t.name %></strong><br>
                  <small><%= t.role || 'Parent' %></small>
                </div>
              </div>
            </div>

          <% } %>
        <% } else { %>
          <p class="text-center text-muted">No parent reviews available.</p>
        <% } %>

      </div>
    </div>

  </div>
</section>

                <!-- ================= END TESTIMONIALS ================= -->

                
                <!-- FOOTER -->
                <%- include('footer') %>
                    <!-- Bootstrap JS -->
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="js/script.js"></script>
</body>

</html>