    <script>
      // Initialize tooltips
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
      })

      // Faculty Brochure PDF Generation
      document.getElementById('downloadBrochure').addEventListener('click', function () {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();

        // Header
        doc.setFillColor(30, 58, 138); // primary color
        doc.rect(0, 0, 210, 40, 'F');
        doc.setTextColor(255, 255, 255);
        doc.setFontSize(22);
        doc.text("GOVERNMENT COACHING ACADEMY", 105, 15, { align: "center" });
        doc.setFontSize(16);
        doc.text("FACULTY BROCHURE", 105, 25, { align: "center" });
        doc.setFontSize(10);
        doc.text("Empowering Success through Quality Education", 105, 32, { align: "center" });

        let yPos = 50;

        // Prepare Faculty Data
        const facultySections = [
          { name: "FOUNDER & LEADERSHIP", id: "founder" },
          { name: "GENERAL STUDIES", id: "gs" },
          { name: "OPTIONAL SUBJECTS", id: "optional" },
          { name: "APTITUDE & CSAT", id: "aptitude" }
        ];

        facultySections.forEach(section => {
          doc.setTextColor(30, 58, 138);
          doc.setFontSize(14);
          doc.setFont("helvetica", "bold");
          doc.text(section.name, 14, yPos);
          yPos += 10;

          const cards = document.querySelectorAll(`#${section.id} .faculty-card`);
          const tableData = [];

          cards.forEach(card => {
            const nameElement = card.querySelector('h3, h4, h5');

            const name = nameElement ? nameElement.innerText.trim() : ".name";

            const designationElement = card.querySelector('.designation');
            const designation = designationElement ? designationElement.innerText.trim() : "Faculty";

            const rawText = card.innerText;

            // Extracting details using regex
            const qualMatch = rawText.match(/Qualification:\s*([^\n\r]*)/i);
            const qual = qualMatch ? qualMatch[1].trim() : "";

            const expMatch = rawText.match(/(?:Expertise|Experience):\s*([^\n\r]*)/i);
            const exp = expMatch ? expMatch[1].trim() : "";

            tableData.push([name, designation, qual, exp]);
          });

          doc.autoTable({
            startY: yPos,
            head: [['Name', 'Designation', 'Qualification', 'Expertise/Exp']],
            body: tableData,
            theme: 'striped',
            headStyles: { fillColor: [30, 58, 138] },
            margin: { top: 10 },
            didDrawPage: (data) => {
              yPos = data.cursor.y + 15;
            }
          });

          yPos = doc.lastAutoTable.finalY + 15;

          if (yPos > 250 && section !== facultySections[facultySections.length - 1]) {
            doc.addPage();
            yPos = 20;
          }
        });

        // Footer
        const pageCount = doc.internal.getNumberOfPages();
        for (let i = 1; i <= pageCount; i++) {
          doc.setPage(i);
          doc.setFontSize(10);
          doc.setTextColor(150);
          doc.text("© 2026 Government Coaching Academy | +91-9876543210", 105, 285, { align: "center" });
          doc.text(`Page ${i} of ${pageCount}`, 190, 285);
        }

        doc.save("Faculty_Brochure_GCA.pdf");
      });

      // Helper for contains selector (jQuery-like)
      window.addEventListener('load', () => {
        // Number Counter Animation
        const counters = document.querySelectorAll('.count-up');
        const speed = 200;

        const animateCounters = (counter) => {
          const target = +counter.getAttribute('data-target');
          let count = 0;
          const inc = target / speed;

          const updateCount = () => {
            count += inc;
            if (count < target) {
              counter.innerText = Math.ceil(count);
              setTimeout(updateCount, 1);
            } else {
              counter.innerText = target;
            }
          };
          updateCount();
        };

        const observerOptions = {
          threshold: 0.5
        };

        const observer = new IntersectionObserver((entries, observer) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              animateCounters(entry.target);
              observer.unobserve(entry.target);
            }
          });
        }, observerOptions);

        counters.forEach(counter => {
          observer.observe(counter);
        });
      });
    </script>
