/* ================= GLOBAL ================= */
body {
    background: var(--gov-bg);
    color: var(--gov-dark);
}

h3 {
    font-weight: 700;
    color: var(--gov-dark);
}

label {
    font-weight: 600;
    color: #374151;
}

/* ================= BUTTONS ================= */
.btn {
    border-radius: 10px;
    font-weight: 600;
}

.btn-primary {
    background: linear-gradient(135deg, var(--gov-dark), #122a44);
    border: none;
}

.btn-success {
    background: linear-gradient(135deg, #15803d, #166534);
    border: none;
}

.btn-warning {
    background: linear-gradient(135deg, var(--gov-accent), #d97706);
    border: none;
    color: #000;
}

.btn-danger {
    background: linear-gradient(135deg, #dc2626, #991b1b);
    border: none;
}

.btn-secondary {
    background: #6b7280;
    border: none;
}

/* ================= COLLAPSE PANELS ================= */
#editBannerForm,
#editCourseForm {
    background: #ffffff;
    border-radius: var(--gov-radius);
    padding: 24px;
    margin-top: 15px;
    border: 1px solid var(--gov-border);
    box-shadow: var(--gov-shadow);
}

/* Banner section accent */
#editBannerForm {
    border-left: 6px solid var(--gov-dark);
}

/* Course edit accent */
#editCourseForm {
    border-left: 6px solid var(--gov-accent);
}

/* ================= INPUTS ================= */
input.form-control,
textarea.form-control {
    border-radius: 10px;
    border: 1px solid var(--gov-border);
}

input.form-control:focus,
textarea.form-control:focus {
    border-color: var(--gov-accent);
    box-shadow: 0 0 0 0.15rem rgba(245,158,11,0.25);
}

/* ================= IMAGE PREVIEW ================= */
.card-body img {
    border-radius: 12px;
    border: 1px solid var(--gov-border);
}

/* ================= TABLE ================= */
table {
    background: #ffffff;
    border-radius: var(--gov-radius);
    overflow: hidden;
    box-shadow: var(--gov-shadow);
}

table thead {
    background: linear-gradient(
        135deg,
        var(--gov-dark),
        #1e293b
    );
    color: #ffffff;
}

table thead th {
    border: none;
    padding: 14px;
    font-weight: 700;
}

table tbody td {
    padding: 14px;
    vertical-align: middle;
    border-color: var(--gov-border);
}

table tbody tr {
    transition: 0.3s ease;
}

table tbody tr:hover {
    background: #f1f5f9;
    transform: scale(1.01);
}

/* ================= ACTION BUTTONS ================= */
table .btn {
    min-width: 80px;
}

/* ================= MOBILE POLISH ================= */
@media (max-width: 768px) {

    h3 {
        font-size: 18px;
    }

    #editBannerForm,
    #editCourseForm {
        padding: 18px;
    }

    table th,
    table td {
        font-size: 14px;
    }

    .btn {
        width: 100%;
        margin-bottom: 6px;
    }
}




