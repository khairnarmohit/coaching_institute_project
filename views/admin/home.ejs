<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Manage Achievements

    <button class="btn btn-outline-primary btn-sm"
            type="button"
            onclick="toggleAchievements()">
        Edit ðŸ‘‡ 
    </button>
    </h3>
</div>

<div id="achievementWrapper" style="display: none;">

    <form method="POST" action="/admin/achievements/save">
        <input type="hidden" name="id" value="<%= achievement ? achievement.id : '' %>">

        <div class="mb-2">
            <input name="title" class="form-control" placeholder="Title"
                   value="<%= achievement ? achievement.title : '' %>" required>
        </div>

        <div class="mb-2">
            <input name="value" type="number" class="form-control" placeholder="Value"
                   value="<%= achievement ? achievement.value : '' %>" required>
        </div>

        <div class="mb-2">
            <select name="suffix" class="form-control">
                <option value="+" <%= achievement && achievement.suffix === '+' ? 'selected' : '' %>>+</option>
                <option value="%" <%= achievement && achievement.suffix === '%' ? 'selected' : '' %>>%</option>
            </select>
        </div>

        <button class="btn btn-success mb-3">Save</button>
    </form>

    <table class="table table-bordered">
        <tr>
            <th>Title</th>
            <th>Value</th>
            <th>Suffix</th>
            <th>Action</th>
        </tr>

        <% achievements.forEach(a => { %>
            <tr>
                <td><%= a.title %></td>
                <td><%= a.value %></td>
                <td><%= a.suffix %></td>
                <td>
                    <a href="/admin/achievements/edit/<%= a.id %>"
                       class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        <% }) %>
    </table>

</div>

<script>
    function toggleAchievements() {
        const box = document.getElementById("achievementWrapper");
        if (box.style.display === "none") {
            box.style.display = "block";
        } else {
            box.style.display = "none";
        }
    }
</script>


