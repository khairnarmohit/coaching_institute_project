<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admission Form - GCA</title>
 <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   

<style>
:root{
--gov-dark:#0b1c2d;
--gov-accent:#f59e0b;
--gov-bg:#f8fafc;
}

body{
      overflow-x: hidden;
    }

.admission-hero{
background:linear-gradient(rgba(11,28,45,.9),rgba(11,28,45,.8)),
url("https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?auto=format&fit=crop&w=2000&q=80")
center/cover no-repeat;
padding:45px 0 40px;
text-align:center;
color:#fff;
}

.admission-form-container{
max-width:900px;
margin:-40px auto 100px;
background:#fff;
padding:40px;
border-radius:25px;
box-shadow:0 20px 40px rgba(0,0,0,.1);
}

.form-step{display:none;}
.form-step.active{display:block;}

.step-indicator{
display:flex;
justify-content:space-between;
margin-bottom:30px;
}
.step-indicator div{
flex:1;
text-align:center;
font-weight:600;
color:#9ca3af;
}
.step-indicator div.active{
color:var(--gov-accent);
}

.section-card{
background:var(--gov-bg);
padding:30px;
border-radius:20px;
margin-bottom:30px;
}

.form-control{border-radius:12px;padding:12px}
.form-label{font-weight:600}
.required-star{color:red}

.btn-nav{
border-radius:50px;
padding:12px 30px;
font-weight:700;
}
.btn-next{background:var(--gov-accent);border:none;}
.btn-prev{background:#e5e7eb;border:none;}

.btn-submit{
background:var(--gov-accent);
font-weight:700;
border-radius:50px;
border:none;
width:100%;
padding:15px;
}
</style>
</head>

<body>
    <%- include('navbar') %>

<div class="admission-hero">
  <h1 class="fw-bold font-size-5">Enrollment Form</h1>
  <p>Academic Year 2026-27</p>
</div>

<div class="container">
<form id="admissionForm" class="admission-form-container"
action="/admin/addmission_form"
method="post"
enctype="multipart/form-data">

<!-- STEP INDICATOR -->
<div class="step-indicator">
  <div class="active">Personal</div>
  <div>Education</div>
  <div>Course</div>
  <div>Guardian</div>
  <div>Documents</div>
</div>

<!-- ================= STEP 1 ================= -->
<div class="form-step active">
<h5 class="fw-bold mb-3">Personal Information</h5>
<div class="section-card row g-3">

<div class="col-md-6">
<label class="form-label">Full Name <span class="required-star">*</span></label>
<input type="text" class="form-control" name="full_name" required>
</div>

<div class="col-md-6">
<label class="form-label">Gender <span class="required-star">*</span></label>
<select class="form-control" name="gender" required>
<option value="">Select Gender</option>
<option>Male</option>
<option>Female</option>
<option>Other</option>
</select>
</div>

<div class="col-md-6">
<label class="form-label">Date of Birth <span class="required-star">*</span></label>
<input type="date" class="form-control" name="date_of_birth" required>
</div>

<div class="col-md-6">
<label class="form-label">Mobile Number <span class="required-star">*</span></label>
<input type="text" class="form-control"
name="mobile_number"
placeholder="10-digit Mobile Number"
maxlength="10"
pattern="[0-9]{10}"
inputmode="numeric"
oninput="this.value=this.value.replace(/[^0-9]/g,'')"
required>
</div>

<div class="col-md-6">
<label class="form-label">Email Address <span class="required-star">*</span></label>
<input type="email" class="form-control" name="email" required>
</div>

<div class="col-md-6">
<label class="form-label">Permanent Address <span class="required-star">*</span></label>
<textarea class="form-control" name="address" required></textarea>
</div>

</div>
</div>

<!-- ================= STEP 2 ================= -->
<div class="form-step">
<h5 class="fw-bold mb-3">Educational Background</h5>
<div class="section-card row g-3">

<div class="col-md-6">
<label class="form-label">Highest Qualification</label>
<input type="text" class="form-control" name="qualification">
</div>

<div class="col-md-6">
<label class="form-label">College / University</label>
<input type="text" class="form-control" name="college_name">
</div>

<div class="col-md-6">
<label class="form-label">Year of Passing</label>
<input type="text" class="form-control"
name="passing_year"
maxlength="4"
pattern="[0-9]{4}"
inputmode="numeric"
oninput="this.value=this.value.replace(/[^0-9]/g,'')">
</div>

</div>
</div>

<!-- ================= STEP 3 ================= -->
<div class="form-step">
<h5 class="fw-bold mb-3">Course Selection</h5>
<div class="section-card row g-3">

<div class="col-md-6">
<label class="form-label">Selected Course <span class="required-star">*</span></label>
<select class="form-control" name="course_name" required>
<option value="">Select Course</option>
<option>UPSC</option>
<option>MPSC</option>
<option>Banking </option>
<option>Talathi</option>
<option>Railway</option>
</select>
</div>

<div class="col-md-6">
<label class="form-label">Mode of Study <span class="required-star">*</span></label>
<select class="form-control" name="mode_of_class" required>
<option value="">Select Mode</option>
<option>Online</option>
<option>Offline</option>
</select>
</div>

</div>
</div>

<!-- ================= STEP 4 ================= -->
<div class="form-step">
<h5 class="fw-bold mb-3">Guardian Information</h5>
<div class="section-card row g-3">

<div class="col-md-6">
<label class="form-label">Parent / Guardian Name</label>
<input type="text" class="form-control" name="parent_name">
</div>

<div class="col-md-6">
<label class="form-label">Emergency Contact Number</label>
<input type="text" class="form-control" name="parent_contact">
</div>

</div>
</div>

<!-- ================= STEP 5 ================= -->
<div class="form-step">
<h5 class="fw-bold mb-3">Documents Upload</h5>
<div class="section-card row g-3">

<div class="col-md-6">
<label class="form-label">Passport Size Photo</label>
<input type="file" class="form-control" name="photo">
</div>

<div class="col-md-6">
<label class="form-label">Identity Proof</label>
<input type="file" class="form-control" name="id_proof">
</div>

</div>

<div class="form-check mt-3">
<input class="form-check-input" type="checkbox" required>
<label class="form-check-label">
I confirm all details are correct
</label>
</div>

<button type="submit" class="btn btn-submit mt-4">
Confirm & Submit Admission
</button>
</div>

<!-- NAV BUTTONS -->
<div class="d-flex justify-content-between mt-4">
<button type="button" class="btn btn-prev btn-nav">Previous</button>
<button type="button" class="btn btn-next btn-nav">Next</button>
</div>

</form>
</div>
<%- include('footer') %>

<script>
const steps=document.querySelectorAll(".form-step");
const indicators=document.querySelectorAll(".step-indicator div");
let current=0;

function validateStep(){
const inputs=steps[current].querySelectorAll("input, select, textarea");
for(let input of inputs){
if(!input.checkValidity()){
input.reportValidity();
return false;
}
}
return true;
}

function showStep(i){
steps.forEach(s=>s.classList.remove("active"));
indicators.forEach(d=>d.classList.remove("active"));
steps[i].classList.add("active");
indicators[i].classList.add("active");
document.querySelector(".btn-prev").style.display=i===0?"none":"inline-block";
document.querySelector(".btn-next").style.display=i===steps.length-1?"none":"inline-block";
}

document.querySelector(".btn-next").onclick=()=>{
if(validateStep()){
current++;
showStep(current);
}
};

document.querySelector(".btn-prev").onclick=()=>{
current--;
showStep(current);
};

showStep(0);
</script>

</body>
</html>
