    <a href="/admin/courses/mpsc" class="nav-link ps-4">MPSC</a>
    <a href="/admin/courses/banking" class="nav-link ps-4">Banking</a>
    <a href="/admin/courses/police" class="nav-link ps-4">Police</a>
