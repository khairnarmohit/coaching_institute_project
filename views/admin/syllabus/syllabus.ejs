<!-- ================= ADD SYLLABUS MODAL ================= -->
<div class="modal fade" id="addSyllabusModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">

      <!-- MODAL HEADER -->
      <div class="modal-header">
        <h5 class="modal-title">Add New Syllabus</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <!-- MODAL BODY -->
      <div class="modal-body">
        <form id="syllabusForm" action="/admin/add_syllabus" method="POST" enctype="multipart/form-data">
            <input type="text" id="syllabus_id" name="syllabus_id" hidden>
          <!-- Exam Name -->
          <div class="mb-3">
            <label class="form-label">Exam Name</label>
            <input type="text" id="exam_name" name="exam_name" class="form-control" placeholder="MPSC / UPSC" required>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control" rows="4"
              placeholder="Brief syllabus description..." required></textarea>
          </div>

          <div class="row">

            <!-- Icon -->
            <div class="col-md-6 mb-3">
              <label class="form-label">Font Awesome Icon </label>
              <input type="text" id="icon_class" name="icon_class" class="form-control"
                placeholder="fas fa-landmark">
              <small class="text-muted">Example: fas fa-book, fas fa-university<a href="https://fontawesome.com/search" target="_blank">(Get Icon Link)</a></small>
            </div>


          </div>

          <!-- PDF Upload -->
          <div class="mb-3">
            <label class="form-label">Upload Syllabus PDF</label>
            <input type="file" name="pdf_file" class="form-control" accept=".pdf" >
          </div>


          <!-- FOOTER BUTTONS -->
          <div class="modal-footer">
            <button type="submit" class="btn btn-success">
              <i class="fas fa-save"></i> Save Syllabus
            </button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>


<!-- ================= TABLE ================= -->

<main class="container mt-4">
  <section class="batches-section">
    <h2 class="section-title">Syllabus </h2>
<br>
    <button class="btn btn-primary float-end mt-2 mb-4"
  data-bs-toggle="modal"
  data-bs-target="#addSyllabusModal">
  âž• Add Syllabus
</button>
<br><br>
       <br>
      <div class="gov-header px-4 py-3 fw-bold">
      <i class="bi bi-list-ul"></i> Syllabus List
    </div>
    <table class="table table-bordered ">
      <thead>
        <tr>
          <th>Sr No</th>
          <th>Exam Name</th>
          <th>Description</th>
          <th>PDF</th>
          <th width="70px">Icon</th>
          <th width="90px">Action</th>
        </tr>
      </thead>

      <tbody>
        <% for(var i=0;i<syllabus.length;i++){ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= syllabus[i].exam_name %></td>
          <td><%= syllabus[i].description %></td>
          <td><a href="/pdf/<%= syllabus[i].pdf_path %>" target="_blank"><%= syllabus[i].pdf_path %></a></td>
          <td id="da"><%- syllabus[i].icon_class %> </td>
         
          <td>
            <!-- EDIT BUTTON -->
            <a href="javascript:void(0)"
              class="btn btn-sm btn-primary editSyllabusBtn"
              data-id="<%= syllabus[i].id %>"
              data-exam_name="<%= syllabus[i].exam_name %>"
              data-description="<%= syllabus[i].description %>"
              data-icon_class="<%= syllabus[i].icon_class %>">
              <i class="fa-solid fa-pen-to-square"></i>
            </a>

            <!-- DELETE -->
            <a href="/admin/delete_syllabus/<%= syllabus[i].id %>"
              class="btn btn-sm btn-danger"
              onclick="return confirm('Are you sure?')">
              <i class="fa-solid fa-trash"></i>
            </a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </section>
</main>

<!-- ================= SCRIPTS ================= -->

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
/* EDIT BUTTON CLICK */
$(document).on("click", ".editSyllabusBtn", function () {

  $("#syllabus_id").val($(this).data("id"));
  $("#exam_name").val($(this).data("exam_name"));
  $("#description").val($(this).data("description"));
  $("#icon_class").val($(this).data("icon_class"));
 

  $(".modal-title").text("Edit Syllabus");
  $("#syllabusForm").attr("action", "/admin/update_syllabus");

  $("#addSyllabusModal").modal("show");
});

/* ADD BUTTON RESET */
$("#addSyllabusBtn").on("click", function () {
  $("#syllabusForm")[0].reset();
  $("#syllabus_id").val("");
  $(".modal-title").text("Add New Syllabus");
  $("#syllabusForm").attr("action", "/admin/add_syllabus");
});
</script>



