      background: var(--gov-accent);
      color: var(--gov-dark);
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 0.8rem;
      font-weight: 600;
      margin: 2px;
    }

    /* Tabs */
    .faculty-tabs {
      border-bottom: 2px solid var(--gov-border);
      margin-bottom: 30px;
    }

    .nav-tabs .nav-link {
      font-weight: 600;
      color: var(--gov-muted);
      border: none;
      padding: 10px 20px;
      margin-right: 5px;
    }

    .nav-tabs .nav-link.active {
      color: var(--gov-dark);
      border-bottom: 3px solid var(--gov-accent);
      background-color: transparent;
    }

    .nav-tabs .nav-link:hover {
